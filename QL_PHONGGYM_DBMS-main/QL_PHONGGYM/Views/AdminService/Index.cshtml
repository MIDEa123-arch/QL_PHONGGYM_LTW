@model List<QL_PHONGGYM.Models.GoiTap>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<div class="card border-0 shadow-sm">
    <div class="card-header bg-white py-3 d-flex justify-content-between align-items-center">
        <h5 class="mb-0 fw-bold text-primary"><i class="fas fa-dumbbell me-2"></i> Danh sách gói tập</h5>
        <a href="@Url.Action("Create")" class="btn btn-primary btn-sm">
            <i class="fas fa-plus me-1"></i> Thêm mới
        </a>
    </div>
    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table table-hover align-middle mb-0">
                <thead class="table-light">
                    <tr>
                        <th class="ps-4">Tên gói</th>
                        <th>Thời hạn (Tháng)</th>
                        <th>Giá tiền</th>
                        <th>Mô tả</th>
                        <th class="text-end pe-4">Hành động</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Any())
                    {
                        foreach (var item in Model)
                        {
                            <tr>
                                <td class="ps-4 fw-bold">@item.TenGoi</td>
                                <td>@item.ThoiHan tháng</td>
                                <td class="text-danger fw-bold">@string.Format("{0:N0}đ", item.Gia)</td>
                                <td class="text-muted small text-truncate" style="max-width: 300px;">@item.MoTa</td>
                                <td class="text-end pe-4">
                                    <a href="@Url.Action("Edit", new { id = item.MaGoiTap })" class="btn btn-outline-primary btn-sm me-1">
                                        <i class="fas fa-edit"></i>
                                    </a>
                                    <button onclick="deleteItem(@item.MaGoiTap)" class="btn btn-outline-danger btn-sm">
                                        <i class="fas fa-trash-alt"></i>
                                    </button>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr><td colspan="5" class="text-center py-4">Chưa có dữ liệu</td></tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script>
    function deleteItem(id) {
        if (confirm('Bạn có chắc muốn xóa gói tập này?')) {
            $.ajax({
                url: '@Url.Action("Delete", "AdminService")',
                type: 'POST',
                data: { id: id },
                success: function (res) {
                    if (res.success) {
                        location.reload();
                    } else {
                        alert(res.message);
                    }
                }
            });
        }
    }
</script>
