@{
    ViewBag.Title = "Quản lý Gói Tập";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="card border-0 shadow-sm">
    <div class="card-header bg-white py-3 d-flex justify-content-between align-items-center">
        <h5 class="mb-0 fw-bold text-primary"><i class="fas fa-dumbbell me-2"></i> Danh sách gói tập</h5>
        <a href="@Url.Action("Create", "AdminService")" class="btn btn-primary btn-sm">
            <i class="fas fa-plus me-1"></i> Thêm mới
        </a>
    </div>
    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table table-hover align-middle mb-0">
                <thead class="table-light">
                    <tr>
                        <th class="ps-4">Tên gói</th>
                        <th>Thời hạn (Tháng)</th>
                        <th>Giá tiền</th>
                        <th>Trạng thái</th>
                        <th>Mô tả</th>
                        <th class="text-end pe-4">Hành động</th>
                    </tr>
                </thead>
                <tbody id="tableBody">
                </tbody>
            </table>
        </div>

        <div class="p-3 d-flex justify-content-center">
            <nav aria-label="Page navigation">
                <ul class="pagination mb-0" id="pagination">
                </ul>
            </nav>
        </div>
    </div>
</div>

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script>
    $(document).ready(function () {
        loadData(1);
    });

    function loadData(page) {
        $.ajax({
            url: '/AdminService/GetList',
            type: 'GET',
            data: { page: page },
            success: function (res) {
                if (res.success) {
                    renderTable(res.data);
                    renderPagination(res.pagination);
                } else {
                    alert(res.message);
                }
            },
            error: function () {
                alert("Không thể tải dữ liệu.");
            }
        });
    }

    function renderTable(data) {
        var html = '';
        if (data.length === 0) {
            html = '<tr><td colspan="6" class="text-center py-4">Chưa có dữ liệu</td></tr>';
        } else {
            $.each(data, function (i, item) {
                var statusLabel = item.TrangThai === 1
                    ? '<span class="badge bg-success">Đang hoạt động</span>'
                    : '<span class="badge bg-secondary">Ngừng kinh doanh</span>';

                var price = item.Gia.toLocaleString('vi-VN') + 'đ';

                html += `<tr>
                            <td class="ps-4 fw-bold">${item.TenGoi}</td>
                            <td>${item.ThoiHan} tháng</td>
                            <td class="text-danger fw-bold">${price}</td>
                            <td>${statusLabel}</td>
                            <td class="text-muted small text-truncate" style="max-width: 300px;">${item.MoTa || ''}</td>
                            <td class="text-end pe-4">
                                <a href="/AdminService/Edit/${item.MaGoiTap}" class="btn btn-outline-primary btn-sm me-1">
                                    <i class="fas fa-edit"></i>
                                </a>
                                <button onclick="deleteItem(${item.MaGoiTap})" class="btn btn-outline-danger btn-sm">
                                    <i class="fas fa-trash-alt"></i>
                                </button>
                            </td>
                        </tr>`;
            });
        }
        $('#tableBody').html(html);
    }

    function renderPagination(pageInfo) {
        var html = '';
        if (pageInfo.totalPages > 1) {
            if (pageInfo.page > 1) {
                html += `<li class="page-item">
                            <a class="page-link" href="#" onclick="loadData(${pageInfo.page - 1})">&laquo;</a>
                         </li>`;
            }

            for (var i = 1; i <= pageInfo.totalPages; i++) {
                var active = i === pageInfo.page ? 'active' : '';
                html += `<li class="page-item ${active}">
                            <a class="page-link" href="#" onclick="loadData(${i})">${i}</a>
                         </li>`;
            }

            if (pageInfo.page < pageInfo.totalPages) {
                html += `<li class="page-item">
                            <a class="page-link" href="#" onclick="loadData(${pageInfo.page + 1})">&raquo;</a>
                         </li>`;
            }
        }
        $('#pagination').html(html);
    }

    function deleteItem(id) {
        if (confirm('Bạn có chắc muốn xóa gói tập này?')) {
            $.ajax({
                url: '/AdminService/Delete',
                type: 'POST',
                data: { id: id },
                success: function (res) {
                    if (res.success) {
                        alert(res.message);
                        loadData(1);
                    } else {
                        alert(res.message);
                    }
                },
                error: function () {
                    alert("Lỗi kết nối server.");
                }
            });
        }
    }
</script>