@model QL_PHONGGYM.Models.GoiTap
@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<div class="card border-0 shadow-sm" style="max-width: 800px; margin: 0 auto;">
    <div class="card-header bg-white py-3">
        <h5 class="mb-0 fw-bold text-primary">Cập nhật: @Model.TenGoi</h5>
    </div>
    <div class="card-body">
        @using (Html.BeginForm("Edit", "AdminService", FormMethod.Post))
        {
            @Html.AntiForgeryToken()
            @Html.HiddenFor(m => m.MaGoiTap)

            if (ViewBag.Error != null)
            {
                <div class="alert alert-danger">@ViewBag.Error</div>
            }

            <div class="row g-3">
                <div class="col-md-12">
                    <label class="form-label fw-bold">Tên gói tập</label>
                    @Html.TextBoxFor(m => m.TenGoi, new { @class = "form-control", required = "required" })
                    @Html.ValidationMessageFor(model => model.TenGoi, "", new { @class = "text-danger" })
                </div>

                <div class="col-md-6">
                    <label class="form-label fw-bold">Thời hạn (Số tháng)</label>
                    @Html.TextBoxFor(m => m.ThoiHan, new { @class = "form-control", type = "number", required = "required" })
                </div>

                <div class="col-md-6">
                    <label class="form-label fw-bold">Giá gói tập (VNĐ)</label>

                    @Html.TextBoxFor(m => m.Gia, new
               {
                   @class = "form-control",
                   type = "text",
                   id = "txtGia",
                   placeholder = "Nhập giá gói tập",
                   Value = (Model != null && Model.Gia > 0) ? Model.Gia.ToString("#,##0").Replace(',', '.') : "",
                   required = "required"
               })

                    @Html.ValidationMessageFor(m => m.Gia, "", new { @class = "text-danger small" })
                </div>
                <div class="col-md-12">
                    <label class="form-label fw-bold">Trạng thái kinh doanh</label>
                    @Html.DropDownListFor(m => m.TrangThai, new List<SelectListItem>
                    {
                        new SelectListItem { Text = "Đang kinh doanh", Value = "1" },
                        new SelectListItem { Text = "Ngừng kinh doanh", Value = "0" }
                    }, new { @class = "form-control form-select" })
                    @Html.ValidationMessageFor(m => m.TrangThai, "", new { @class = "text-danger" })
                </div>
                <div class="col-md-12">
                    <label class="form-label fw-bold">Mô tả quyền lợi</label>
                    @Html.TextAreaFor(m => m.MoTa, new { @class = "form-control", rows = "4" })
                    @Html.ValidationMessageFor(model => model.MoTa, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="mt-4 text-end">
                <a href="@Url.Action("Index")" class="btn btn-light border me-2">Hủy</a>
                <button type="submit" class="btn btn-success px-4 fw-bold">Cập nhật</button>
            </div>
        }
    </div>
</div>
<script>
    document.addEventListener("DOMContentLoaded", function () {
        var inputGia = document.getElementById('txtGia');
        var form = document.querySelector('form');
        if (inputGia) {
            inputGia.addEventListener('input', function (e) {
                var value = e.target.value;
                value = value.replace(/\D/g, '');
                value = value.replace(/\B(?=(\d{3})+(?!\d))/g, ".");
                e.target.value = value;
            });

            if (form) {
                form.addEventListener('submit', function () {
                    var rawValue = inputGia.value.replace(/\./g, '');
                    inputGia.value = rawValue;
                });
            }
        } else {
            console.error("Lỗi: Không tìm thấy ô nhập liệu có id='txtGia'. Kiểm tra lại code HTML.");
        }
    });
</script>
