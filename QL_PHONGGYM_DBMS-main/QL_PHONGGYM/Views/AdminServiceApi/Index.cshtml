@{
    ViewBag.Title = "Quản lý Gói Tập (API)";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml"; // Đảm bảo đúng layout của bạn
}

<div class="card shadow mb-4">
    <div class="card-header py-3 d-flex justify-content-between align-items-center">
        <h6 class="m-0 font-weight-bold text-primary">Danh sách Gói Tập</h6>
        <button class="btn btn-primary btn-sm" onclick="showCreateModal()">
            <i class="fas fa-plus"></i> Thêm mới
        </button>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>Tên Gói</th>
                        <th>Giá</th>
                        <th>Thời Hạn (Tháng)</th>
                        <th>Trạng Thái</th>
                        <th>Thao tác</th>
                    </tr>
                </thead>
                <tbody id="tableBody">
                </tbody>
            </table>

            <nav>
                <ul class="pagination justify-content-end" id="pagination"></ul>
            </nav>
        </div>
    </div>
</div>

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

<script>
    $(document).ready(function () {
        loadData(1); // Load trang 1 khi vào web
    });

    // Hàm gọi API lấy danh sách
    function loadData(page) {
        $.ajax({
            url: '/AdminServiceApi/Index', // Đường dẫn đến API Controller của bạn
            type: 'GET',
            data: { page: page },
            success: function (res) {
                if (res.success) {
                    renderTable(res.data);
                    renderPagination(res.pagination);
                } else {
                    alert("Lỗi tải dữ liệu: " + res.message);
                }
            },
            error: function (err) {
                console.log(err);
                alert("Không thể kết nối đến server");
            }
        });
    }

    // Hàm vẽ bảng HTML
    function renderTable(data) {
        var html = '';
        if (data.length === 0) {
            html = '<tr><td colspan="5" class="text-center">Không có dữ liệu</td></tr>';
        } else {
            $.each(data, function (i, item) {
                var statusLabel = item.TrangThai === 1
                    ? '<span class="badge badge-success">Đang hoạt động</span>'
                    : '<span class="badge badge-secondary">Ngừng kinh doanh</span>';

                html += `<tr>
                            <td>${item.TenGoi}</td>
                            <td>${item.Gia.toLocaleString('vi-VN')} đ</td>
                            <td>${item.ThoiHan}</td>
                            <td>${statusLabel}</td>
                            <td>
                                <button class="btn btn-info btn-sm" onclick="editItem(${item.MaGoiTap})">Sửa</button>
                                <button class="btn btn-danger btn-sm" onclick="deleteItem(${item.MaGoiTap})">Xóa</button>
                            </td>
                        </tr>`;
            });
        }
        $('#tableBody').html(html);
    }

    // Hàm vẽ phân trang
    function renderPagination(pageInfo) {
        var html = '';
        for (var i = 1; i <= pageInfo.totalPages; i++) {
            var active = i === pageInfo.page ? 'active' : '';
            html += `<li class="page-item ${active}"><a class="page-link" href="#" onclick="loadData(${i})">${i}</a></li>`;
        }
        $('#pagination').html(html);
    }

    // Hàm xóa
    function deleteItem(id) {
        if (!confirm('Bạn có chắc muốn xóa gói tập này?')) return;

        $.ajax({
            url: '/AdminServiceApi/Delete',
            type: 'POST',
            data: { id: id },
            success: function (res) {
                alert(res.message);
                if (res.success) {
                    loadData(1); // Load lại bảng sau khi xóa thành công
                }
            }
        });
    }

    // Hàm chuẩn bị sửa (Bạn cần làm thêm Modal để nhập liệu)
    function editItem(id) {
        // Gọi API Detail để lấy dữ liệu rồi hiện lên Modal
        $.get('/AdminServiceApi/Detail', { id: id }, function(res){
            if(res.success){
                console.log(res.data);
                alert("Đã lấy được dữ liệu gói " + res.data.TenGoi + ". Giờ bạn cần code thêm cái Modal để hiện nó lên form!");
            }
        });
    }

    function showCreateModal() {
        alert("Bạn cần code thêm cái Modal Bootstrap ở đây để nhập thông tin thêm mới!");
    }
</script>