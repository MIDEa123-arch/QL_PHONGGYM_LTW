@model QL_PHONGGYM.Models.SanPham
@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="card border-0 shadow-sm">
    <div class="card-header bg-white py-3">
        <h5 class="mb-0 fw-bold text-primary">Thêm sản phẩm mới</h5>
    </div>
    <div class="card-body">
        @using (Html.BeginForm("Create", "AdminProduct", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            @Html.AntiForgeryToken()

            if (ViewBag.Error != null)
            {
                <div class="alert alert-danger">@ViewBag.Error</div>
            }

            @Html.ValidationSummary(true, "", new { @class = "text-danger mb-3" })

            <div class="row g-3">
                <div class="col-md-8">
                    <div class="mb-3">
                        <label class="form-label fw-bold">Tên sản phẩm <span class="text-danger">*</span></label>
                        @Html.TextBoxFor(m => m.TenSP, new { @class = "form-control", required = "required", placeholder = "Nhập tên sản phẩm" })
                        @Html.ValidationMessageFor(m => m.TenSP, "", new { @class = "text-danger" })
                    </div>

                    <div class="row mb-3">
                        <div class="col-md-6">
                            <label class="form-label fw-bold">Danh mục <span class="text-danger">*</span></label>
                            @Html.DropDownList("MaLoaiSP", null, "-- Chọn loại --", new { @class = "form-select", required = "required" })
                            @Html.ValidationMessageFor(m => m.MaLoaiSP, "", new { @class = "text-danger" })
                        </div>
                        <div class="col-md-6">
                            <label class="form-label fw-bold">Thương hiệu (Hãng)</label>
                            @Html.TextBoxFor(m => m.Hang, new { @class = "form-control" })
                        </div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-md-6">
                            <label class="form-label fw-bold">Xuất xứ</label>
                            @Html.TextBoxFor(m => m.XuatXu, new { @class = "form-control" })
                        </div>
                        <div class="col-md-6">
                            <label class="form-label fw-bold">Bảo hành</label>
                            @Html.TextBoxFor(m => m.BaoHanh, new { @class = "form-control" })
                        </div>
                    </div>

                    <div class="mb-3">
                        <label class="form-label fw-bold">Mô tả ngắn <span class="text-danger">*</span></label>
                        @Html.TextAreaFor(m => m.MoTaChung, new { @class = "form-control", rows = "3", required = "required" })
                        @Html.ValidationMessageFor(m => m.MoTaChung, "", new { @class = "text-danger" })
                    </div>

                    <div class="mb-3">
                        <label class="form-label fw-bold">Mô tả chi tiết</label>
                        @Html.TextAreaFor(m => m.MoTaChiTiet, new { @class = "form-control", rows = "5", placeholder = "Nhập thông số kỹ thuật...\nXuống dòng sẽ tự động chuyển thành dấu |" })
                    </div>
                </div>

                <div class="col-md-4">
                    <div class="card bg-light border-0 mb-3">
                        <div class="card-body">
                            <h6 class="fw-bold border-bottom pb-2">Giá & Kho</h6>

                            <div class="mb-3">
                                <label class="form-label">Giá bán (VNĐ) <span class="text-danger">*</span></label>

                                <input type="text"
                                       name="strDonGia"
                                       id="txtDonGia"
                                       class="form-control currency-input"
                                       required
                                       placeholder="0"
                                       value="@(Model.DonGia > 0 ? Model.DonGia.ToString("#,##0").Replace(",",".") : "")" />

                                @Html.ValidationMessageFor(m => m.DonGia, "", new { @class = "text-danger" })
                            </div>

                            <div class="mb-3">
                                <label class="form-label">Giá khuyến mãi (VNĐ)</label>

                                <input type="text"
                                       name="strGiaKhuyenMai"
                                       class="form-control currency-input"
                                       placeholder="Để trống nếu không có"
                                       value="@(Model.GiaKhuyenMai > 0 ? Model.GiaKhuyenMai.Value.ToString("#,##0").Replace(",",".") : "")" />
                                @Html.ValidationMessageFor(m => m.GiaKhuyenMai, "", new { @class = "text-danger" })
                            </div>

                            <div class="mb-3">
                                <label class="form-label">Số lượng tồn kho <span class="text-danger">*</span></label>
                                @Html.TextBoxFor(m => m.SoLuongTon, new { @class = "form-control number-only", required = "required" })
                                @Html.ValidationMessageFor(m => m.SoLuongTon, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>

                    <div class="card bg-light border-0">
                        <div class="card-body">
                            <h6 class="fw-bold border-bottom pb-2">Hình ảnh</h6>
                            <div class="mb-3">
                                <label class="form-label small">Chọn nhiều ảnh (Ảnh đầu tiên sẽ là ảnh chính)</label>
                                <input type="file" name="images" class="form-control" multiple accept="image/*" />
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="mt-4 pt-3 border-top d-flex justify-content-end gap-2">
                <a href="@Url.Action("Index")" class="btn btn-light border">Hủy</a>
                <button type="submit" class="btn btn-primary px-4 fw-bold">Lưu sản phẩm</button>
            </div>
        }
    </div>
</div>

<script>
    document.addEventListener("DOMContentLoaded", function () {
        var currencyInputs = document.querySelectorAll('.currency-input');
        function formatCurrency(input) {
            var value = input.value.replace(/\D/g, "");
            if (value !== "") {
                value = new Intl.NumberFormat('vi-VN').format(value);
            }
            input.value = value;
        }
        currencyInputs.forEach(function (input) {
            input.addEventListener('input', function () {
                formatCurrency(this);
            });
            formatCurrency(input);
        });
        var numberInputs = document.querySelectorAll('.number-only');
        numberInputs.forEach(function (input) {
            input.addEventListener('input', function () {
                this.value = this.value.replace(/[^0-9]/g, '');
            });
        });
    });
    $('.currency-input').on('blur keyup', function () {
        CheckGiaKhuyenMai();
    });
    function CheckGiaKhuyenMai() {
        var strGiaBan = $('#txtDonGia').val().replace(/\./g, '');
        var strGiaKM = $('#txtGiaKM').val().replace(/\./g, '');
        var giaBan = parseFloat(strGiaBan) || 0;
        var giaKM = parseFloat(strGiaKM) || 0;
        if (giaKM > 0 && giaKM >= giaBan) {
            var errorSpan = $('span[data-valmsg-for="GiaKhuyenMai"]');
            if (errorSpan.length === 0) {
                $('#txtGiaKM').addClass('is-invalid');
            } else {
                errorSpan.text("Giá khuyến mãi phải nhỏ hơn giá gốc!").addClass("field-validation-error").removeClass("field-validation-valid");
            }
        } else {
            $('#txtGiaKM').removeClass('is-invalid');
            $('span[data-valmsg-for="GiaKhuyenMai"]').text("").addClass("field-validation-valid").removeClass("field-validation-error");
        }
    }
</script>