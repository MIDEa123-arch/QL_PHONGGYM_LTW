@model QL_PHONGGYM.Models.SanPham

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<style>
    .btn-delete-overlay {
        position: absolute;
        top: -8px; 
        right: -8px; 
        width: 24px;
        height: 24px;
        border-radius: 50%; 
        background-color: rgba(0, 0, 0, 0.5); 
        color: white;
        cursor: pointer;
        font-size: 12px;
        transition: all 0.2s ease-in-out;
        z-index: 10; 
        border: 2px solid white;
    }
        .btn-delete-overlay:hover {
            background-color: rgba(0, 0, 0, 0.8);
            transform: scale(1.1);
        }

    .img-delete-checkbox:checked + .btn-delete-overlay {
        background-color: #dc3545;
        border-color: #dc3545;
    }

    .img-delete-checkbox:checked ~ img {
        opacity: 0.4;
        filter: grayscale(100%);
    }
</style>

<div class="card border-0 shadow-sm">
    <div class="card-header bg-white py-3">
        <h5 class="mb-0 fw-bold text-primary">Cập nhật sản phẩm: @Model.TenSP</h5>
    </div>
    <div class="card-body">
        @using (Html.BeginForm("Edit", "AdminProduct", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            @Html.AntiForgeryToken()
            @Html.HiddenFor(m => m.MaSP)

            if (ViewBag.Error != null)
            {
                <div class="alert alert-danger">@ViewBag.Error</div>
            }

            <div class="row g-3">
                <div class="col-md-8">
                    <div class="mb-3">
                        <label class="form-label fw-bold">Tên sản phẩm <span class="text-danger">*</span></label>
                        @Html.TextBoxFor(m => m.TenSP, new { @class = "form-control", required = "required" })
                        @Html.ValidationMessageFor(m => m.TenSP, "", new { @class = "text-danger" })
                    </div>

                    <div class="row mb-3">
                        <div class="col-md-6">
                            <label class="form-label fw-bold">Danh mục <span class="text-danger">*</span></label>
                            @Html.DropDownList("MaLoaiSP", null, new { @class = "form-select", required = "required" })
                            @Html.ValidationMessageFor(m => m.MaLoaiSP, "", new { @class = "text-danger" })
                        </div>
                        <div class="col-md-6">
                            <label class="form-label fw-bold">Thương hiệu</label>
                            @Html.TextBoxFor(m => m.Hang, new { @class = "form-control" })
                        </div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-md-6">
                            <label class="form-label fw-bold">Xuất xứ</label>
                            @Html.TextBoxFor(m => m.XuatXu, new { @class = "form-control" })
                        </div>
                        <div class="col-md-6">
                            <label class="form-label fw-bold">Bảo hành</label>
                            @Html.TextBoxFor(m => m.BaoHanh, new { @class = "form-control" })
                        </div>
                    </div>

                    <div class="mb-3">
                        <label class="form-label fw-bold">Mô tả ngắn <span class="text-danger">*</span></label>
                        @Html.TextAreaFor(m => m.MoTaChung, new { @class = "form-control", rows = "3", required = "required" })

                    </div>

                    <div class="mb-3">
                        <label class="form-label fw-bold">Mô tả chi tiết</label>
                        @Html.TextAreaFor(m => m.MoTaChiTiet, new { @class = "form-control", rows = "5" })
                    </div>
                </div>

                <div class="col-md-4">
                    <div class="card bg-light border-0 mb-3">
                        <div class="card-body">
                            <h6 class="fw-bold border-bottom pb-2">Giá & Kho</h6>

                            <div class="mb-3">
                                <label class="form-label">Giá bán (VNĐ) <span class="text-danger">*</span></label>

                                <input type="text"
                                       name="strDonGia"
                                       id="txtDonGia"
                                       class="form-control currency-input"
                                       required
                                       placeholder="0"
                                       value="@(Model.DonGia > 0 ? Model.DonGia.ToString("#,##0").Replace(",",".") : "")" />

                                @Html.ValidationMessageFor(m => m.DonGia, "", new { @class = "text-danger" })
                            </div>

                            <div class="mb-3">
                                <label class="form-label">Giá khuyến mãi (VNĐ)</label>

                                <input type="text"
                                       name="strGiaKhuyenMai"
                                       class="form-control currency-input"
                                       placeholder="Để trống nếu không có"
                                       value="@(Model.GiaKhuyenMai > 0 ? Model.GiaKhuyenMai.Value.ToString("#,##0").Replace(",",".") : "")" />
                                @Html.ValidationMessageFor(m => m.GiaKhuyenMai, "", new { @class = "text-danger" })
                            </div>

                            <div class="mb-3">
                                <label class="form-label">Số lượng tồn kho <span class="text-danger">*</span></label>
                                @Html.TextBoxFor(m => m.SoLuongTon, new { @class = "form-control", type = "number", required = "required" })
                                @Html.ValidationMessageFor(m => m.SoLuongTon, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>

                    <div class="card bg-light border-0">
                        <div class="card-body">
                            <h6 class="fw-bold border-bottom pb-2">Hình ảnh hiện tại</h6>
                            @if (Model.HINHANHs != null && Model.HINHANHs.Any())
                            {
                                <div class="d-flex flex-wrap gap-3">
                                    @foreach (var img in Model.HINHANHs)
                                    {
                                        <div class="position-relative image-container border rounded bg-white" style="width: 100px; height: 100px;">

                                            <input type="checkbox"
                                                   name="deleteImageIds"
                                                   value="@img.MaHinh"
                                                   id="img_del_@img.MaHinh"
                                                   class="d-none img-delete-checkbox">

                                            <img src="~/Content/Images/@img.Url"
                                                 class="rounded"
                                                 style="width: 100%; height: 100%; object-fit: cover; transition: 0.3s;">

                                            <label for="img_del_@img.MaHinh"
                                                   class="btn-delete-overlay d-flex justify-content-center align-items-center shadow-sm"
                                                   title="Xóa ảnh này">
                                                <i class="fas fa-times"></i>
                                            </label>

                                        </div>
                                    }
                                </div>
                                <small class="text-muted d-block mt-3 fst-italic">
                                    * Các ảnh được đánh dấu đỏ sẽ bị xóa sau khi bấm "Cập nhật".
                                </small>
                            }
                            else
                            {
                                <p class="small text-muted">Chưa có hình ảnh nào.</p>
                            }
                            <label class="form-label small fw-bold">Thêm ảnh mới (nếu cần)</label>
                            <input type="file" name="images" class="form-control" multiple accept="image/*" />
                        </div>
                    </div>
                </div>
            </div>
           
            <div class="mt-4 pt-3 border-top d-flex justify-content-end gap-2">
                <a href="@Url.Action("Index")" class="btn btn-light border">Quay lại</a>
                <button type="submit" class="btn btn-success px-4 fw-bold">Cập nhật</button>
            </div>
        }
    </div>
</div>
<script>
    document.addEventListener("DOMContentLoaded", function () {
        var currencyInputs = document.querySelectorAll('.currency-input');
        function formatCurrency(input) {
            var value = input.value.replace(/\D/g, "");
            if (value !== "") {
                value = new Intl.NumberFormat('vi-VN').format(value);
            }
            input.value = value;
        }
        currencyInputs.forEach(function (input) {
            input.addEventListener('input', function () {
                formatCurrency(this);
            });
            formatCurrency(input);
        });
        var numberInputs = document.querySelectorAll('.number-only');
        numberInputs.forEach(function (input) {
            input.addEventListener('input', function () {
                this.value = this.value.replace(/[^0-9]/g, '');
            });
        });
    });
    $('.currency-input').on('blur keyup', function () {
        CheckGiaKhuyenMai();
    });
    function CheckGiaKhuyenMai() {
        var strGiaBan = $('#txtDonGia').val().replace(/\./g, '');
        var strGiaKM = $('#txtGiaKM').val().replace(/\./g, '');
        var giaBan = parseFloat(strGiaBan) || 0;
        var giaKM = parseFloat(strGiaKM) || 0;
        if (giaKM > 0 && giaKM >= giaBan) {
            var errorSpan = $('span[data-valmsg-for="GiaKhuyenMai"]');
            if (errorSpan.length === 0) {
                $('#txtGiaKM').addClass('is-invalid');
            } else {
                errorSpan.text("Giá khuyến mãi phải nhỏ hơn giá gốc!").addClass("field-validation-error").removeClass("field-validation-valid");
            }
        } else {
            $('#txtGiaKM').removeClass('is-invalid');
            $('span[data-valmsg-for="GiaKhuyenMai"]').text("").addClass("field-validation-valid").removeClass("field-validation-error");
        }
    }
</script>
