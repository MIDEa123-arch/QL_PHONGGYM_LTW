@model QL_PHONGGYM.ViewModel.NhanVienViewModel
@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    bool isLocked = ViewBag.IsLocked ?? false;
}

<div class="card border-0 shadow-sm" style="max-width: 800px; margin: 0 auto;">
    <div class="card-header bg-white py-3">
        <h5 class="mb-0 fw-bold text-primary">Cập nhật: @Model.TenNV</h5>
    </div>
    <div class="card-body">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            @Html.HiddenFor(m => m.MaNV)
            @Html.HiddenFor(m => m.TenDangNhap)
            @Html.HiddenFor(m => m.TrangThaiTaiKhoan)

            if (ViewBag.Error != null)
            {
                <div class="alert alert-danger">@ViewBag.Error</div>
            }

            @Html.ValidationSummary(true, "", new { @class = "text-danger mb-3" })

            if (isLocked)
            {
                <div class="alert alert-warning">
                    <i class="fas fa-exclamation-triangle"></i> Nhân viên này đã được gán khách PT hoặc đang phụ trách lớp học. Không thể thay đổi Chức vụ và Chuyên môn.
                </div>
            }

            <div class="row g-3">
                <div class="col-md-6">
                    <label class="form-label fw-bold">Họ và tên <span class="text-danger">*</span></label>
                    @Html.TextBoxFor(m => m.TenNV, new { @class = "form-control", required = "required" })
                    @Html.ValidationMessageFor(m => m.TenNV, "", new { @class = "text-danger" })
                </div>
                <div class="col-md-6">
                    <label class="form-label fw-bold">Chức vụ <span class="text-danger">*</span></label>
                    @Html.DropDownListFor(m => m.MaChucVu, Model.ChucVuList, new { @class = "form-select", required = "required", id = "MaChucVu", disabled = isLocked ? "disabled" : null })
                    @Html.ValidationMessageFor(m => m.MaChucVu, "", new { @class = "text-danger" })
                </div>

                <div class="col-12" id="ChuyenMonGroup" style="display: none;">
                    <label class="form-label fw-bold">Chuyên môn <span class="text-danger">*</span></label>
                    <div class="row">
                        @if (Model.ChuyenMonList != null)
                        {
                            foreach (var cm in Model.ChuyenMonList)
                            {
                                <div class="col-md-4">
                                    <div class="form-check">
                                        @{
                                            bool isChecked = Model.SelectedChuyenMonIds != null && Model.SelectedChuyenMonIds.Contains(cm.MaCM);
                                        }
                                        <input type="checkbox"
                                               name="SelectedChuyenMonIds"
                                               value="@cm.MaCM"
                                               class="form-check-input"
                                               id="cm_@cm.MaCM"
                                               @(isChecked ? "checked" : "")
                                               @(isLocked ? "disabled" : null) />
                                        <label class="form-check-label" for="cm_@cm.MaCM">@cm.TenChuyenMon</label>
                                    </div>
                                </div>
                            }
                        }
                    </div>
                    @Html.ValidationMessage("SelectedChuyenMonIds", "", new { @class = "text-danger" })
                </div>

                <div class="col-md-6">
                    <label class="form-label fw-bold">Số điện thoại <span class="text-danger">*</span></label>
                    @Html.TextBoxFor(m => m.SDT, new
                    {
                        @class = "form-control",
                        required = "required",
                        maxlength = "10",
                        oninput = "this.value = this.value.replace(/[^0-9]/g, '')"
                    })
                    @Html.ValidationMessageFor(m => m.SDT, "", new { @class = "text-danger" })
                </div>
                <div class="col-md-6">
                    <label class="form-label fw-bold">Ngày sinh</label>
                    <input type="date"
                           name="NgaySinh"
                           class="form-control"
                           max="@DateTime.Now.ToString("yyyy-MM-dd")"
                           value="@(Model.NgaySinh.HasValue ? Model.NgaySinh.Value.ToString("yyyy-MM-dd") : "")" />

                    @Html.ValidationMessageFor(m => m.NgaySinh, "", new { @class = "text-danger" })
                </div>

                <div class="col-md-6">
                    <label class="form-label fw-bold">Giới tính</label>
                    <select name="GioiTinh" class="form-select">
                        <option value="Nam" @(Model.GioiTinh == "Nam" ? "selected" : "")>Nam</option>
                        <option value="Nữ" @(Model.GioiTinh == "Nữ" ? "selected" : "")>Nữ</option>
                    </select>
                </div>

                <div class="col-12 mt-3">
                    <h6 class="border-bottom pb-2 text-muted">Tài khoản (Chỉ nhập nếu muốn đổi mật khẩu)</h6>
                </div>

                <div class="col-md-6">
                    <label class="form-label fw-bold">Tên đăng nhập <span class="text-muted small">(Không thể sửa)</span></label>
                    <input type="text" class="form-control bg-light" value="@Model.TenDangNhap" disabled readonly />
                </div>

                <div class="col-md-6">
                    <label class="form-label fw-bold">Mật khẩu mới</label>
                    <div class="position-relative">
                        @Html.TextBoxFor(m => m.MatKhau, new
                        {
                            @class = "form-control pe-5",
                            type = "password",
                            id = "txtMatKhau",
                            placeholder = "Bỏ trống nếu không đổi"
                        })
                        <span class="position-absolute top-50 end-0 translate-middle-y me-3"
                              id="btnTogglePass" style="cursor: pointer; z-index: 10;">
                            <i class="fas fa-eye text-secondary" id="iconEye"></i>
                        </span>
                    </div>
                    @Html.ValidationMessageFor(m => m.MatKhau, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="mt-4 text-end">
                <a href="@Url.Action("Index")" class="btn btn-light border me-2">Hủy</a>
                <button type="submit" class="btn btn-primary px-4 fw-bold">Cập nhật</button>
            </div>
        }
    </div>
</div>

@section scripts {
    <script>
        $(document).ready(function () {
            var ptHlvCodes = ["1", "2"];
            var isLocked = @(isLocked.ToString().ToLower());

            function toggleChuyenMon() {
                var selectedMaChucVu = $('#MaChucVu').val();

                if (ptHlvCodes.includes(selectedMaChucVu)) {
                    $('#ChuyenMonGroup').show();
                } else {
                    $('#ChuyenMonGroup').hide();
                }
            }

            if (!isLocked) {
                $('#MaChucVu').change(function () {
                    toggleChuyenMon();
                });
            }

            toggleChuyenMon();

            var btnToggle = document.getElementById('btnTogglePass');
            if (btnToggle) {
                btnToggle.addEventListener('click', function () {
                    var inputPass = document.getElementById('txtMatKhau');
                    var icon = document.getElementById('iconEye');
                    if (inputPass.type === "password") {
                        inputPass.type = "text";
                        icon.classList.remove("fa-eye");
                        icon.classList.add("fa-eye-slash");
                    } else {
                        inputPass.type = "password";
                        icon.classList.remove("fa-eye-slash");
                        icon.classList.add("fa-eye");
                    }
                });
            }
        });
    </script>
}