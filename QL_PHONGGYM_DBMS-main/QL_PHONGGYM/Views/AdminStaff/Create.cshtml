@model QL_PHONGGYM.Models.NhanVien

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<div class="card border-0 shadow-sm" style="max-width: 800px; margin: 0 auto;">
    <div class="card-header bg-white py-3">
        <h5 class="mb-0 fw-bold text-primary">Thêm nhân viên mới</h5>
    </div>
    <div class="card-body">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            if (ViewBag.Error != null)
            {
                <div class="alert alert-danger">@ViewBag.Error</div>
            }

            @Html.ValidationSummary(true, "", new { @class = "text-danger mb-3" })

            <div class="row g-3">
                <div class="col-md-6">
                    <label class="form-label fw-bold">Họ và tên <span class="text-danger">*</span></label>
                    @Html.TextBoxFor(m => m.TenNV, new { @class = "form-control", required = "required" })
                    @Html.ValidationMessageFor(m => m.TenNV, "", new { @class = "text-danger" })
                </div>
                <div class="col-md-6">
                    <label class="form-label fw-bold">Chức vụ <span class="text-danger">*</span></label>
                    @Html.DropDownList("MaChucVu", null, "-- Chọn chức vụ --", new { @class = "form-select", required = "required" })
                    @Html.ValidationMessageFor(m => m.MaChucVu, "", new { @class = "text-danger" })
                </div>

                <div class="col-md-6">
                    <label class="form-label fw-bold">Số điện thoại <span class="text-danger">*</span></label>

                    @Html.TextBoxFor(m => m.SDT, new
                    {
                        @class = "form-control",
                        required = "required",
                        maxlength = "10",
                        oninput = "this.value = this.value.replace(/[^0-9]/g, '')",
                        placeholder = "(Tối đa 10 số)"
                    })

                    @Html.ValidationMessageFor(m => m.SDT, "", new { @class = "text-danger" })
                </div>
                <div class="col-md-6">
                    <label class="form-label fw-bold">Ngày sinh</label>
                    <input type="date"
                           name="NgaySinh"
                           class="form-control"
                           max="@DateTime.Now.ToString("yyyy-MM-dd")"
                           value="@(Model.NgaySinh.HasValue ? Model.NgaySinh.Value.ToString("yyyy-MM-dd") : "")" />

                    @Html.ValidationMessageFor(m => m.NgaySinh, "", new { @class = "text-danger" })
                </div>

                <div class="col-md-6">
                    <label class="form-label fw-bold">Giới tính</label>
                    <select name="GioiTinh" class="form-select">
                        <option value="Nam">Nam</option>
                        <option value="Nữ">Nữ</option>
                    </select>
                </div>

                <div class="col-12 mt-3">
                    <h6 class="border-bottom pb-2 text-muted">Thông tin đăng nhập</h6>
                </div>

                <div class="col-md-6">
                    <label class="form-label fw-bold">Tên đăng nhập <span class="text-danger">*</span></label>
                    @Html.TextBoxFor(m => m.TenDangNhap, new { @class = "form-control", required = "required" })
                    @Html.ValidationMessageFor(m => m.TenDangNhap, "", new { @class = "text-danger" })
                </div>

                <div class="col-md-6">
                    <label class="form-label fw-bold">Mật khẩu <span class="text-danger">*</span></label>

                    <div class="position-relative">
                        @Html.TextBoxFor(m => m.MatKhau, new
                        {
                            @class = "form-control pe-5",
                            type = "password",
                            required = "required",
                            id = "txtMatKhau",
                            placeholder = "Nhập mật khẩu..."
                        })

                        <span class="position-absolute top-50 end-0 translate-middle-y me-3"
                              id="btnTogglePass"
                              style="cursor: pointer; z-index: 10;">
                            <i class="fas fa-eye text-secondary" id="iconEye"></i>
                        </span>
                    </div>

                    @Html.ValidationMessageFor(m => m.MatKhau, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="mt-4 text-end">
                <a href="@Url.Action("Index")" class="btn btn-light border me-2">Hủy</a>
                <button type="submit" class="btn btn-primary px-4 fw-bold">Lưu nhân viên</button>
            </div>
        }
    </div>
</div>

@section scripts {
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            // Xử lý ẩn/hiện mật khẩu
            var btnToggle = document.getElementById('btnTogglePass');

            if (btnToggle) {
                btnToggle.addEventListener('click', function () {
                    var inputPass = document.getElementById('txtMatKhau');
                    var icon = document.getElementById('iconEye');

                    if (inputPass.type === "password") {
                        inputPass.type = "text"; // Hiện mật khẩu
                        icon.classList.remove("fa-eye");
                        icon.classList.add("fa-eye-slash"); // Đổi icon thành gạch chéo
                    } else {
                        inputPass.type = "password"; // Ẩn mật khẩu
                        icon.classList.remove("fa-eye-slash");
                        icon.classList.add("fa-eye"); // Đổi lại icon thường
                    }
                });
            }
        });
    </script>
}