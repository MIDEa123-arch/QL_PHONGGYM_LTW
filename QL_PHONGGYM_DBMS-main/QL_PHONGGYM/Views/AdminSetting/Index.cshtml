@model QL_PHONGGYM.Models.NhanVien
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    // 1. Lấy tham số 'tab' từ URL
    string currentTab = Request.QueryString["tab"];

    // 2. Xác định trạng thái Active cho từng Tab
    // Nếu tab là 'security' -> Tab Mật khẩu sáng. Ngược lại -> Tab Thông tin sáng.

    // Class cho NÚT BẤM (nav-link)
    string navInfoClass = (currentTab != "security") ? "active" : "";
    string navSecurityClass = (currentTab == "security") ? "active" : "";

    // Class cho NỘI DUNG (tab-pane)
    string paneInfoClass = (currentTab != "security") ? "show active" : "";
    string paneSecurityClass = (currentTab == "security") ? "show active" : "";
}
<div class="row justify-content-center">
    <div class="col-md-10 col-lg-8">

        @if (TempData["Success"] != null)
        {
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                <i class="fas fa-check-circle me-2"></i> @TempData["Success"]
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }

        @if (TempData["Error"] != null)
        {
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                <i class="fas fa-exclamation-triangle me-2"></i> @TempData["Error"]
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }

    <div class="card border-0 shadow-sm">
        <div class="card-header bg-white">
            <ul class="nav nav-tabs card-header-tabs" id="settingTabs" role="tablist">
                <li class="nav-item">
                    <button class="nav-link fw-bold @navInfoClass" id="info-tab" data-bs-toggle="tab" data-bs-target="#info" type="button" role="tab">
                        <i class="fas fa-info-circle me-2"></i> Thông tin chung
                    </button>
                </li>

                <li class="nav-item">
                    <button class="nav-link fw-bold @navSecurityClass" id="security-tab" data-bs-toggle="tab" data-bs-target="#security" type="button" role="tab">
                        <i class="fas fa-lock me-2"></i> Đổi mật khẩu
                    </button>
                </li>
            </ul>
        </div>

        <div class="card-body p-4">
            <div class="tab-content" id="settingTabContent">

                <div class="tab-pane fade @paneInfoClass" id="info" role="tabpanel">

                    @using (Html.BeginForm("UpdateProfile", "AdminSetting", FormMethod.Post))
                    {
                        @Html.AntiForgeryToken()
                        <div class="row mb-4 align-items-center text-center">
                            <div class="col-12">
                                <img src="~/Content/Images/user.png" class="rounded-circle border p-1" width="100" height="100">
                                <h5 class="mt-3 fw-bold">@Model.TenNV</h5>
                                <p class="text-muted">@Model.ChucVu.TenChucVu</p>
                            </div>
                        </div>
                        <div class="row g-3">
                            <div class="col-md-6">
                                <label class="form-label fw-bold">Họ và tên</label>
                                <input type="text" name="TenNV" class="form-control" value="@Model.TenNV" required>
                            </div>
                            <div class="col-md-6">
                                <label class="form-label fw-bold">Số điện thoại</label>
                                <input type="text" name="SDT" class="form-control" value="@Model.SDT" required>
                            </div>
                            <div class="col-md-6">
                                <label class="form-label fw-bold">Tài khoản đăng nhập</label>
                                <input type="text" class="form-control bg-light" value="@Model.TenDangNhap" readonly disabled>
                            </div>
                            <div class="col-md-6">
                                <label class="form-label fw-bold">Chức vụ</label>
                                <input type="text" class="form-control bg-light" value="@Model.ChucVu.TenChucVu" readonly disabled>
                            </div>
                        </div>

                        <div class="mt-4 text-end">
                            <button type="submit" class="btn btn-primary px-4 fw-bold">
                                <i class="fas fa-save me-2"></i> Lưu thay đổi
                            </button>
                        </div>
                    }
                </div>

                <div class="tab-pane fade @paneSecurityClass" id="security" role="tabpanel">
                    @using (Html.BeginForm("ChangePassword", "AdminSetting", FormMethod.Post))
                    {
                        @Html.AntiForgeryToken()
                        <div class="row justify-content-center">
                            <div class="col-md-8">
                                <div class="mb-3">
                                    <label class="form-label fw-bold">Mật khẩu hiện tại <span class="text-danger">*</span></label>
                                    <input type="password" name="CurrentPassword" class="form-control" required>
                                </div>
                                <hr class="my-4">
                                <div class="mb-3">
                                    <label class="form-label fw-bold">Mật khẩu mới <span class="text-danger">*</span></label>
                                    <input type="password" name="NewPassword" class="form-control" required>
                                </div>
                                <div class="mb-3">
                                    <label class="form-label fw-bold">Xác nhận mật khẩu mới <span class="text-danger">*</span></label>
                                    <input type="password" name="ConfirmPassword" class="form-control" required>
                                </div>

                                <div class="mt-4">
                                    <button type="submit" class="btn btn-danger w-100 fw-bold">
                                        <i class="fas fa-key me-2"></i> Cập nhật mật khẩu
                                    </button>
                                </div>
                            </div>
                        </div>
                    }
                </div>

            </div>
        </div>
    </div>
    </div>
</div>

