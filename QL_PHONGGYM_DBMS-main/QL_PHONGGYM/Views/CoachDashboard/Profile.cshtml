@model QL_PHONGGYM.Models.NhanVien
@{
    Layout = "~/Views/Shared/_LayoutCoach.cshtml";
}

<div class="row justify-content-center">
    <div class="col-md-4 mb-4">
        <div class="card border-0 shadow-sm text-center h-100">
            <div class="card-body py-5">
                <div class="mb-3 text-secondary">
                    <i class="fas fa-user-circle fa-7x"></i>
                </div>

                <h4 class="fw-bold text-primary mb-1">@Model.TenNV</h4>
                <p class="text-muted mb-4">@Model.ChucVu.TenChucVu</p>

                <div class="d-grid gap-2 col-10 mx-auto">
                    <button class="btn btn-outline-danger fw-bold" data-bs-toggle="modal" data-bs-target="#modalChangePass">
                        <i class="fas fa-key me-2"></i> Đổi Mật Khẩu
                    </button>
                </div>
            </div>
        </div>
    </div>

    <div class="col-md-8 mb-4">
        <div class="card border-0 shadow-sm h-100">
            <div class="card-header bg-white border-0 py-3 border-bottom">
                <h5 class="fw-bold text-primary m-0"><i class="fas fa-user-edit me-2"></i> Cập Nhật Thông Tin</h5>
            </div>
            <div class="card-body p-4">
                <form id="formProfile">
                    <div class="row mb-4">
                        <div class="col-md-6">
                            <label class="form-label small fw-bold text-secondary">Mã Nhân Viên</label>
                            <input type="text" class="form-control bg-light fw-bold" value="@Model.MaNV" readonly>
                        </div>
                        <div class="col-md-6">
                            <label class="form-label small fw-bold text-secondary">Giới Tính</label>
                            <select class="form-select" id="txtGioiTinh">
                                <option value="Nam" @(Model.GioiTinh == "Nam" ? "selected" : "")>Nam</option>
                                <option value="Nữ" @(Model.GioiTinh == "Nữ" ? "selected" : "")>Nữ</option>
                            </select>
                        </div>
                    </div>

                    <div class="mb-4">
                        <label class="form-label small fw-bold text-secondary">Họ và Tên</label>
                        <input type="text" class="form-control" id="txtHoTen" value="@Model.TenNV">
                    </div>

                    <div class="mb-4">
                        <label class="form-label small fw-bold text-secondary">Số Điện Thoại</label>
                        <input type="text" class="form-control" id="txtSDT" value="@Model.SDT">
                    </div>

                    <div class="d-flex justify-content-end mt-5">
                        <button type="button" class="btn btn-primary fw-bold px-4" onclick="saveProfile()">
                            <i class="fas fa-save me-2"></i> Lưu Thay Đổi
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="modalChangePass" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header bg-danger text-white">
                <h5 class="modal-title fw-bold">Đổi Mật Khẩu</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <form id="formChangePass">
                    <div class="mb-3">
                        <label class="form-label fw-bold">Mật khẩu hiện tại</label>
                        <input type="password" class="form-control" id="txtOldPass">
                    </div>
                    <div class="mb-3">
                        <label class="form-label fw-bold">Mật khẩu mới</label>
                        <input type="password" class="form-control" id="txtNewPass">
                    </div>
                    <div class="mb-3">
                        <label class="form-label fw-bold">Nhập lại mật khẩu mới</label>
                        <input type="password" class="form-control" id="txtConfirmPass">
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-light" data-bs-dismiss="modal">Hủy</button>
                <button type="button" class="btn btn-danger fw-bold" onclick="submitChangePass()">Xác Nhận</button>
            </div>
        </div>
    </div>
</div>

@section scripts {
    <script>
        // 1. Lưu thông tin (Chỉ gửi 3 trường: HoTen, SDT, GioiTinh)
        function saveProfile() {
            var hoTen = $('#txtHoTen').val();
            var sdt = $('#txtSDT').val();
            var gioiTinh = $('#txtGioiTinh').val();

            if (!hoTen || !sdt) {
                alert("Vui lòng nhập đầy đủ họ tên và số điện thoại!");
                return;
            }

            $.ajax({
                url: '/CoachDashboard/UpdateProfile',
                type: 'POST',
                data: {
                    hoTen: hoTen,
                    sdt: sdt,
                    gioiTinh: gioiTinh
                },
                success: function (res) {
                    if (res.success) {
                        alert(res.message);
                        location.reload();
                    } else {
                        alert(res.message);
                    }
                },
                error: function () {
                    alert('Lỗi kết nối server!');
                }
            });
        }

        // 2. Đổi mật khẩu
        function submitChangePass() {
            var oldPass = $('#txtOldPass').val();
            var newPass = $('#txtNewPass').val();
            var confirmPass = $('#txtConfirmPass').val();

            if (!oldPass || !newPass) {
                alert("Vui lòng nhập đầy đủ thông tin!");
                return;
            }
            if (newPass !== confirmPass) {
                alert("Mật khẩu xác nhận không khớp!");
                return;
            }

            $.ajax({
                url: '/CoachDashboard/ChangePassword',
                type: 'POST',
                data: { matKhauCu: oldPass, matKhauMoi: newPass },
                success: function (res) {
                    if (res.success) {
                        alert(res.message);
                        $('#modalChangePass').modal('hide');
                        $('#formChangePass')[0].reset();
                    } else {
                        alert(res.message);
                    }
                },
                error: function () {
                    alert('Lỗi kết nối server!');
                }
            });
        }
    </script>
}