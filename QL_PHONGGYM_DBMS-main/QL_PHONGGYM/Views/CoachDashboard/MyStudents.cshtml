@model QL_PHONGGYM.Models.MyStudentPageViewModel
@{
    Layout = "~/Views/Shared/_LayoutCoach.cshtml";
}

<div class="card shadow-sm border-0">
    <div class="card-header bg-white py-0">
        <ul class="nav nav-tabs card-header-tabs" id="myTab" role="tablist">
            <li class="nav-item" role="presentation">
                <button class="nav-link active fw-bold py-3" id="pt-tab" data-bs-toggle="tab" data-bs-target="#pt-content" type="button">
                    <i class="fas fa-user-friends me-2"></i> KHÁCH HÀNG PT
                </button>
            </li>
            <li class="nav-item" role="presentation">
                <button class="nav-link fw-bold py-3" id="class-tab" data-bs-toggle="tab" data-bs-target="#class-content" type="button">
                    <i class="fas fa-chalkboard-teacher me-2"></i> LỚP PHỤ TRÁCH
                </button>
            </li>
        </ul>
    </div>

    <div class="card-body p-0">
        <div class="tab-content" id="myTabContent">

            <div class="tab-pane fade show active" id="pt-content" role="tabpanel">
                <div class="table-responsive">
                    <table class="table table-hover align-middle mb-0">
                        <thead class="bg-light text-secondary small fw-bold text-uppercase">
                            <tr>
                                <th class="ps-4">Học Viên</th>
                                <th>Gói Tập</th>
                                <th>Tiến Độ</th>
                                <th>Trạng Thái</th>
                                <th class="text-end pe-4">Chi Tiết</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model.PtStudents != null && Model.PtStudents.Any())
                            {
                                foreach (var item in Model.PtStudents)
                                {
                                    <tr>
                                        <td class="ps-4 py-3">
                                            <div class="d-flex align-items-center">
                                                <div class="rounded-circle bg-secondary bg-opacity-10 text-secondary d-flex align-items-center justify-content-center fw-bold me-3" style="width: 40px; height: 40px;">
                                                    @(item.TenKH.Substring(0, 1))
                                                </div>
                                                <div>
                                                    <div class="fw-bold text-dark">@item.TenKH</div>
                                                    <div class="small text-muted">@item.SDT</div>
                                                </div>
                                            </div>
                                        </td>
                                        <td>
                                            <div class="small fw-bold">PT 1-1</div>
                                            <div class="small text-muted">Mục tiêu: @item.GhiChuMucTieu</div>
                                        </td>
                                        <td style="width: 200px;">
                                            <div class="d-flex justify-content-between small mb-1">
                                                <span>@item.DaTap / @item.TongBuoi buổi</span>
                                                <span class="fw-bold text-primary">@Math.Round(item.TienDo)%</span>
                                            </div>
                                            <div class="progress" style="height: 6px;">
                                                <div class="progress-bar bg-primary" role="progressbar" style="width: @item.TienDo%"></div>
                                            </div>
                                        </td>
                                        <td>
                                            <span class="badge @(item.TrangThai == "Còn hiệu lực" ? "bg-success" : "bg-secondary")">@item.TrangThai</span>
                                        </td>
                                        <td class="text-end pe-4">
                                            <button class="btn btn-sm btn-outline-info" onclick="viewHistory(@item.MaDKPT, '@item.TenKH')">
                                                <i class="fas fa-history"></i> Lịch sử
                                            </button>
                                        </td>
                                    </tr>
                                }
                            }
                            else
                            {
                                <tr><td colspan="5" class="text-center py-5 text-muted">Không có khách PT nào.</td></tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>

            <div class="tab-pane fade" id="class-content" role="tabpanel">
                <div class="row g-3 p-3">
                    @if (Model.MyClasses != null && Model.MyClasses.Any())
                    {
                        foreach (var lop in Model.MyClasses)
                        {
                            <div class="col-md-6 col-lg-4">
                                <div class="card h-100 border shadow-sm">
                                    <div class="card-body">
                                        <div class="d-flex justify-content-between align-items-start mb-3">
                                            <div>
                                                <h5 class="fw-bold text-primary mb-1">@lop.TenLop</h5>
                                                <span class="badge bg-info text-dark">@lop.ChuyenMon</span>
                                            </div>
                                            <div class="text-end">
                                                <h3 class="fw-bold m-0">@lop.SoLuongHocVien</h3>
                                                <small class="text-muted">Học viên</small>
                                            </div>
                                        </div>

                                        <div class="mb-3">
                                            <div class="d-flex justify-content-between small text-muted mb-1">
                                                <span>Tiến độ lớp:</span>
                                                <span class="fw-bold text-dark">@lop.DaDay / @lop.TongBuoi buổi</span>
                                            </div>
                                            <div class="progress" style="height: 8px;">
                                                @{
                                                    decimal percent = lop.TongBuoi > 0 ? (decimal)lop.DaDay * 100 / lop.TongBuoi : 0;
                                                }
                                                <div class="progress-bar bg-success" style="width: @percent%"></div>
                                            </div>
                                        </div>

                                        <button class="btn btn-outline-primary w-100 fw-bold btn-sm" onclick="viewClassMembers(@lop.MaLop)">
                                            <i class="fas fa-list-ul me-1"></i> Xem danh sách học viên
                                        </button>
                                    </div>
                                </div>
                            </div>
                        }
                    }
                    else
                    {
                        <div class="col-12 text-center py-5 text-muted">Bạn chưa phụ trách lớp học nào.</div>
                    }
                </div>
            </div>

        </div>
    </div>
</div>

<div class="modal fade" id="modalHistory" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header bg-info text-white">
                <h5 class="modal-title fw-bold">Lịch Sử Tập PT</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <h6 class="mb-3">Học viên: <span id="historyStudentName" class="fw-bold"></span></h6>
                <div class="table-responsive" style="max-height: 300px; overflow-y: auto;">
                    <table class="table table-sm table-bordered text-center"><tbody id="historyTableBody"></tbody></table>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="modalClassMembers" tabindex="-1">
    <div class="modal-dialog modal-lg modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header bg-primary text-white">
                <h5 class="modal-title fw-bold"><i class="fas fa-users me-2"></i> Danh Sách Lớp: <span id="classNameTitle"></span></h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body p-0">
                <div class="table-responsive">
                    <table class="table table-striped mb-0">
                        <thead class="bg-light">
                            <tr>
                                <th class="ps-4">Họ Tên</th>
                                <th>SĐT</th>
                                <th>Giới Tính</th>
                                <th class="text-center">Tổng Buổi</th>
                                <th class="text-center">Đã Học</th>
                                <th class="text-center">Còn Lại</th>
                            </tr>
                        </thead>
                        <tbody id="classMembersBody">
                        </tbody>
                    </table>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Đóng</button>
            </div>
        </div>
    </div>
</div>

@section scripts {
    <script>
        function viewHistory(id, name) {
            $('#historyStudentName').text(name);
            $('#historyTableBody').html('<tr><td colspan="3">Đang tải...</td></tr>');
            new bootstrap.Modal(document.getElementById('modalHistory')).show();

            $.post('/CoachDashboard/GetStudentHistory', { maDKPT: id }, function (res) {
                var html = '';
                if (res.success && res.data.length > 0) {
                    html += '<thead class="table-light"><tr><th>Ngày</th><th>Giờ</th><th>Trạng Thái</th></tr></thead><tbody>';
                    $.each(res.data, function (i, item) {
                        html += `<tr><td>${item.Ngay}</td><td>${item.Gio}</td><td>${item.TrangThai}</td></tr>`;
                    });
                    html += '</tbody>';
                } else { html = '<tr><td colspan="3">Chưa có dữ liệu.</td></tr>'; }
                $('#historyTableBody').html(html);
            });
        }

        function viewClassMembers(id) {
            $('#classMembersBody').html('<tr><td colspan="6" class="text-center py-3">Đang tải dữ liệu...</td></tr>');
            new bootstrap.Modal(document.getElementById('modalClassMembers')).show();

            $.post('/CoachDashboard/GetClassMembers', { maLop: id }, function (res) {
                if (res.success) {
                    $('#classNameTitle').text(res.className);
                    var html = '';
                    if (res.data.length > 0) {
                        $.each(res.data, function (i, item) {
                            html += `<tr>
                                <td class="ps-4 fw-bold">${item.TenKH}</td>
                                <td>${item.SDT || ''}</td>
                                <td>${item.GioiTinh || ''}</td>
                                <td class="text-center fw-bold text-primary">${item.TongBuoi}</td>
                                <td class="text-center text-success">${item.DaHoc}</td>
                                <td class="text-center text-danger">${item.ConLai}</td>
                            </tr>`;
                        });
                    } else {
                        html = '<tr><td colspan="6" class="text-center py-3">Lớp này chưa có học viên đăng ký.</td></tr>';
                    }
                    $('#classMembersBody').html(html);
                } else {
                    alert('Lỗi: ' + res.message);
                }
            });
        }
    </script>
}