@{
    ViewBag.Title = "Khôi phục mật khẩu";
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
</head>
<body class="container-fluid min-vh-100 d-flex justify-content-center align-items-center">
    <div class="d-flex flex-column align-items-center px-3" style="max-width: 500px">
        <img src="~/Content/Images/logo.png" class="mb-3" style="width: 8rem" />
        <span class="text-primary fw-bold fs-2 mb-2">Tạo mật khẩu mới</span>
        <span class="fs-6 mb-3 text-center">Hãy nhập số email của bạn vào bên dưới để bắt đầu quá trình khôi phục mật khẩu.</span>
        @using (Html.BeginForm("ForgotPassword", "Account", FormMethod.Post, new { role = "form", @class = "w-100 d-flex flex-column" }))
        {
            @Html.AntiForgeryToken()<label class="fs-6 mb-2">Email của bạn</label>
            <input type="email" name="email" class="form-control py-2 px-3 w-100 mb-1" required />
            if (TempData["ErrorMessage"] != null)
            {
                <span class="text-danger small d-flex gap-2">
                    <i class="bi bi-exclamation-diamond text-danger"></i>
                    @TempData["ErrorMessage"]
                </span>
            }
            <div class="d-flex gap-3 mt-5">
                <a href="@Url.Action("Login", "Account")" class="btn btn-outline-secondary text-decoration-none w-50 text-center fs-6 fw-bold d-flex justify-content-center align-items-center gap-2">
                    <i class="bi bi-arrow-left-short fs-3"></i>
                    Quay lại đăng nhập
                </a>
                <button class="btn btn-primary w-50 text-center fs-6 fw-bold d-flex justify-content-center align-items-center">Tiếp tục</button>
            </div>
        }
    </div>
</body>

</html>
