@model List<QL_PHONGGYM.Models.DonHang>


<div class="table-responsive">
    <table class="table table-hover align-middle mb-0 border">
        <thead class="table-light">
            <tr>
                <th>Mã ĐH</th>
                <th>Khách hàng</th>
                <th>Ngày đặt</th>
                <th>Tổng tiền</th>
                <th>Trạng thái</th>
                <th class="text-center">Xử lý</th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Any())
            {
                foreach (var item in Model)
                {
                    <tr>
                        <td><span class="fw-bold text-primary">#@item.MaDonHang</span></td>
                        <td>
                            <div class="fw-bold">@(item.HoaDons.FirstOrDefault()?.KhachHang?.TenKH ?? "Khách lẻ")</div>
                            <small class="text-muted">@(item.HoaDons.FirstOrDefault()?.KhachHang?.SDT?? "Chưa có SĐT")</small>
                        </td>
                        <td>@item.NgayDat.ToString("dd/MM/yyyy HH:mm")</td>
                        <td class="fw-bold text-success">@item.TongTien.ToString("#,##0") đ</td>

                        <td>
                            @if (item.TrangThaiDonHang == "Chờ xác nhận")
                            {
                                <span class="badge bg-warning text-dark text-center">Chờ xác nhận</span>
                            }
                            else if (item.TrangThaiDonHang == "Chờ giao hàng")
                            {
                                <span class="badge bg-info text-dark text-center">Đang giao hàng</span>
                            }
                            else if (item.TrangThaiDonHang == "Đã giao hàng")
                            {
                                <span class="badge bg-success text-center">Đã giao hàng</span>
                            }
                            else
                            {
                                <span class="badge bg-danger text-center">Đã hủy</span>
                            }
                        </td>

                        <td class="text-center">
                            <button type="button" onclick="viewOrder(@item.MaDonHang)" class="btn btn-outline-info btn-sm me-1" title="Xem chi tiết">
                                <i class="fas fa-eye"></i>
                            </button>
                            @if (item.TrangThaiDonHang == "Chờ xác nhận")
                            {
                                <button type="button" onclick="updateOrderStatus(@item.MaDonHang, 'confirm', event)" class="btn btn-primary btn-sm" title="Xác nhận đơn">
                                    <i class="fas fa-check"></i> Xác nhận
                                </button>
                                <button type="button" onclick="updateOrderStatus(@item.MaDonHang, 'cancel', event)" class="btn btn-outline-danger btn-sm ms-1" title="Hủy đơn">
                                    <i class="fas fa-times"></i>
                                </button>
                            }
                            else if (item.TrangThaiDonHang == "Chờ giao hàng")
                            {
                                <button type="button" onclick="updateOrderStatus(@item.MaDonHang, 'ship', event)" class="btn btn-success btn-sm" title="Xác nhận đã giao xong">
                                    <i class="fas fa-shipping-fast"></i> Đã giao
                                </button>
                                <button type="button" onclick="updateOrderStatus(@item.MaDonHang, 'cancel', event)" class="btn btn-outline-danger btn-sm ms-1">
                                    <i class="fas fa-times"></i>
                                </button>
                            }
                            else
                            {
                                <span class="text-muted small"><i class="fas fa-lock"></i> Đã khóa</span>
                            }
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr><td colspan="6" class="text-center py-4 text-muted">Không tìm thấy đơn hàng nào.</td></tr>
            }
        </tbody>
    </table>
</div>
@if (ViewBag.TotalPages > 1)
{
    <div class="d-flex justify-content-center mt-3 border-top pt-3">
        <nav aria-label="Page navigation">
            <ul class="pagination mb-0">
                @if (ViewBag.CurrentPage > 1)
                {
                    <li class="page-item">
                        <a class="page-link" href="javascript:void(0)" onclick="FilterOrders(@(ViewBag.CurrentPage - 1))">Trước</a>
                    </li>
                }

                @for (int i = 1; i <= ViewBag.TotalPages; i++)
                {
                    <li class="page-item @(i == ViewBag.CurrentPage ? "active" : "")">
                        <a class="page-link" href="javascript:void(0)" onclick="FilterOrders(@i)">@i</a>
                    </li>
                }

                @if (ViewBag.CurrentPage < ViewBag.TotalPages)
                {
                    <li class="page-item">
                        <a class="page-link" href="javascript:void(0)" onclick="FilterOrders(@(ViewBag.CurrentPage + 1))">Sau</a>
                    </li>
                }
            </ul>
        </nav>
    </div>
}
