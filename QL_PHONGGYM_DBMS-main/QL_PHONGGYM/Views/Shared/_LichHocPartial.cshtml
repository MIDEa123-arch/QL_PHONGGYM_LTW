@model List<QL_PHONGGYM.Models.LichLop>

<style>
    /* CSS Tùy chỉnh cho bảng lịch */
    .schedule-table {
        width: 100%;
        border-collapse: collapse;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

        .schedule-table th, .schedule-table td {
            border: 1px solid #dee2e6;
            padding: 10px;
            text-align: center;
            vertical-align: middle;
        }

        /* Tiêu đề cột (Thứ) */
        .schedule-table thead th {
            background-color: #0f3d64; /* Màu xanh đậm giống hình */
            color: white;
            text-transform: uppercase;
            font-size: 0.85rem;
            font-weight: 600;
            height: 50px;
        }

    /* Cột đầu tiên (Thời gian) */
    .time-column {
        font-weight: bold;
        background-color: #f8f9fa;
        color: #333;
        width: 80px;
    }

    /* Ô chứa lịch học */
    .class-session {
        background-color: #e3f2fd; /* Xanh nhạt dịu mắt */
        border-left: 3px solid #0d47a1; /* Viền xanh đậm bên trái */
        padding: 6px;
        margin-bottom: 5px;
        border-radius: 4px;
        font-size: 0.8rem;
        color: #000;
        text-align: center;
        box-shadow: 0 1px 2px rgba(0,0,0,0.05);
    }

        /* Lịch đã qua */
        .class-session.past {
            background-color: #f5f5f5;
            border-left: 3px solid #9e9e9e;
            color: #757575;
            opacity: 0.8;
        }

    .session-date {
        display: block;
        font-weight: bold;
        margin-bottom: 3px;
        font-size: 0.75rem;
        color: #555;
    }

    .session-time {
        font-weight: 600;
        color: #0f3d64;
    }
</style>

@if (Model != null && Model.Any())
{
    var daysOfWeek = new List<DayOfWeek> {
        DayOfWeek.Monday, DayOfWeek.Tuesday, DayOfWeek.Wednesday,
        DayOfWeek.Thursday, DayOfWeek.Friday, DayOfWeek.Saturday, DayOfWeek.Sunday
    };

    Func<DayOfWeek, int, int, List<QL_PHONGGYM.Models.LichLop>> GetSchedule = (day, startHour, endHour) =>
    {
        return Model.Where(x => x.NgayHoc.DayOfWeek == day
                             && x.GioBatDau.Hours >= startHour
                             && x.GioBatDau.Hours < endHour).OrderBy(x => x.NgayHoc).ToList();
    };

    <div class="table-responsive">
        <table class="schedule-table">
            <thead>
                <tr>
                    <th class="bg-white border-0 text-dark">THỜI GIAN</th>
                    <th>THỨ 2</th>
                    <th>THỨ 3</th>
                    <th>THỨ 4</th>
                    <th>THỨ 5</th>
                    <th>THỨ 6</th>
                    <th>THỨ 7</th>
                    <th>CHỦ NHẬT</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td class="time-column">Sáng</td>
                    @foreach (var day in daysOfWeek)
                    {
                        <td>
                            @foreach (var item in GetSchedule(day, 0, 12))
                            {
                                <div class="class-session @(item.TrangThai == "Đã diễn ra" ? "past" : "")">
                                    <span class="session-date">@item.NgayHoc.ToString("dd/MM")</span>
                                    <span class="session-time">@item.GioBatDau.ToString(@"hh\:mm") - @item.GioKetThuc.ToString(@"hh\:mm")</span>
                                </div>
                            }
                        </td>
                    }
                </tr>

                <tr>
                    <td class="time-column">Chiều</td>
                    @foreach (var day in daysOfWeek)
                    {
                        <td>
                            @foreach (var item in GetSchedule(day, 12, 17))
                            {
                                <div class="class-session @(item.TrangThai == "Đã diễn ra" ? "past" : "")">
                                    <span class="session-date">@item.NgayHoc.ToString("dd/MM")</span>
                                    <span class="session-time">@item.GioBatDau.ToString(@"hh\:mm") - @item.GioKetThuc.ToString(@"hh\:mm")</span>
                                </div>
                            }
                        </td>
                    }
                </tr>

                <tr>
                    <td class="time-column">Tối</td>
                    @foreach (var day in daysOfWeek)
                    {
                        <td>
                            @foreach (var item in GetSchedule(day, 17, 24))
                            {
                                <div class="class-session @(item.TrangThai == "Đã diễn ra" ? "past" : "")">
                                    <span class="session-date">@item.NgayHoc.ToString("dd/MM")</span>
                                    <span class="session-time">@item.GioBatDau.ToString(@"hh\:mm") - @item.GioKetThuc.ToString(@"hh\:mm")</span>
                                </div>
                            }
                        </td>
                    }
                </tr>
            </tbody>
        </table>
    </div>

    <div class="mt-3 text-end small text-muted">
        <span class="me-3"><i class="fas fa-square text-secondary opacity-50 me-1"></i> Đã diễn ra</span>
        <span><i class="fas fa-square text-primary opacity-25 me-1"></i> Sắp tới</span>
    </div>
}
else
{
    <div class="alert alert-warning text-center m-3">
        Chưa có lịch học cụ thể cho lớp này.
    </div>
}