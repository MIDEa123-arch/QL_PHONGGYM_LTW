@model QL_PHONGGYM.Models.LopHoc
@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<div class="card border-0 shadow-sm" style="max-width: 900px; margin: 0 auto;">
    <div class="card-header bg-white py-3">
        <h5 class="mb-0 fw-bold text-primary">Tạo lớp học mới</h5>
    </div>
    <div class="card-body">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            if (ViewBag.Error != null)
            {
                <div class="alert alert-danger">@ViewBag.Error</div>
            }
            @Html.ValidationSummary(true, "Vui lòng kiểm tra các lỗi sau:", new { @class = "alert alert-danger mb-3" })

            <div class="row g-3">
                <div class="col-md-6">
                    <label class="form-label fw-bold">Tên lớp học <span class="text-danger">*</span></label>
                    @Html.TextBoxFor(m => m.TenLop, new { @class = "form-control", required = "required", placeholder = "Ví dụ: Yoga Sáng T2-T4-T6" })
                    @Html.ValidationMessageFor(m => m.TenLop, "", new { @class = "text-danger" })
                </div>

                <div class="col-md-6">
                    <label class="form-label fw-bold">Bộ môn <span class="text-danger">*</span></label>
                    @Html.DropDownList("MaCM", null, "-- Chọn bộ môn --", new { @class = "form-select", required = "required", id = "ddlMaCM" })
                    @Html.ValidationMessageFor(m => m.MaCM, "", new { @class = "text-danger" })
                </div>

                <div class="col-md-4">
                    <label class="form-label fw-bold">Học phí (VNĐ) <span class="text-danger">*</span></label>
                    <input type="text"
                           name="strHocPhi"
                           id="txtHocPhi"
                           class="form-control currency-input"
                           required
                           placeholder="0"
                           value="@(Model.HocPhi > 0 ? Model.HocPhi.ToString("#,##0").Replace(",",".") : "")" />
                    @Html.ValidationMessageFor(m => m.HocPhi, "", new { @class = "text-danger" })
                </div>

                <div class="col-md-4">
                    <label class="form-label fw-bold">Số buổi học <span class="text-danger">*</span></label>
                    @Html.TextBoxFor(m => m.SoBuoi, new
                    {
                        @class = "form-control",
                        type = "number",
                        required = "required",
                        min = "1",
                        placeholder = "Nhập tổng số buổi",
                        id = "txtSoBuoi"
                    })
                    @Html.ValidationMessageFor(m => m.SoBuoi, "", new { @class = "text-danger" })
                </div>

                <div class="col-md-4">
                    <label class="form-label fw-bold">Sĩ số tối đa <span class="text-danger">*</span></label>
                    @Html.TextBoxFor(m => m.SiSoToiDa, new
                    {
                        @class = "form-control",
                        type = "number",
                        required = "required",
                        min = "1",
                        Value = Model.SiSoToiDa ?? 30 // Giữ lại giá trị model nếu có
                    })
                    @Html.ValidationMessageFor(m => m.SiSoToiDa, "", new { @class = "text-danger" })
                </div>

                @* 3. NGÀY BẮT ĐẦU/KẾT THÚC (Người dùng chỉ nhập Ngày Bắt Đầu) *@
                <div class="col-md-6">
                    <label class="form-label fw-bold">Ngày khai giảng (Bắt đầu) <span class="text-danger">*</span></label>
                    @Html.TextBoxFor(m => m.NgayBatDau, "{0:yyyy-MM-dd}", new { @class = "form-control", type = "date", required = "required", id = "txtNgayBD" })
                    @Html.ValidationMessageFor(m => m.NgayBatDau, "", new { @class = "text-danger" })
                </div>
                <div class="col-md-6">
                    <label class="form-label fw-bold">Ngày kết thúc (Tối đa) <span class="text-danger">*</span></label>
                    @Html.TextBoxFor(m => m.NgayKetThuc, "{0:yyyy-MM-dd}", new { @class = "form-control", type = "date", required = "required", id = "txtNgayKT" })
                    @Html.ValidationMessageFor(m => m.NgayKetThuc, "", new { @class = "text-danger" })
                    <div class="form-text small" id="KetThucGoiY"></div>
                </div>

                @* 4. CẤU HÌNH LỊCH & CHỌN HLV *@
                <div class="col-md-12">
                    <div class="card bg-light border-0">
                        <div class="card-body">
                            <h6 class="fw-bold text-primary mb-3">Cấu hình lịch học & Huấn luyện viên</h6>

                            <div class="row g-3">

                                @* Giờ học *@
                                <div class="col-md-6">
                                    <label class="form-label fw-bold">Giờ Bắt Đầu/Kết Thúc <span class="text-danger">*</span></label>
                                    <div class="d-flex align-items-center gap-1">
                                        <select class="form-select form-select-sm" id="ddlGioBD" name="GioBatDauHour">
                                            @for (int h = 0; h < 24; h++)
                                            {
                                                <option value="@h.ToString("00")" @(Model.MaLop == 0 && h == 8 ? "selected" : "")>@h.ToString("00") giờ</option>
                                            }
                                        </select>
                                        <select class="form-select form-select-sm" id="ddlPhutBD" name="GioBatDauMinute">
                                            <option value="00">00 phút</option>
                                            <option value="15">15 phút</option>
                                            <option value="30">30 phút</option>
                                            <option value="45">45 phút</option>
                                        </select>
                                        <span class="mx-1 fw-bold">-</span>
                                        <select class="form-select form-select-sm" id="ddlGioKT" name="GioKetThucHour">
                                            @for (int h = 0; h < 24; h++)
                                            {
                                                <option value="@h.ToString("00")" @(Model.MaLop == 0 && h == 9 ? "selected" : "")>@h.ToString("00") giờ</option>
                                            }
                                        </select>
                                        <select class="form-select form-select-sm" id="ddlPhutKT" name="GioKetThucMinute">
                                            <option value="00">00 phút</option>
                                            <option value="15">15 phút</option>
                                            <option value="30">30 phút</option>
                                            <option value="45">45 phút</option>
                                        </select>
                                    </div>
                                    @Html.ValidationMessage("GioBatDau", new { @class = "text-danger small mt-1" })
                                    @Html.ValidationMessage("GioKetThuc", new { @class = "text-danger small mt-1" })
                                </div>

                                <div class="col-md-6">
                                    <label class="form-label fw-bold">Huấn luyện viên phụ trách</label>
                                    <select name="MaNV" id="ddlMaNV" class="form-select">
                                        @if (ViewBag.MaNV != null)
                                        {
                                            <option value="@Model.MaNV" selected>@(Model.NhanVien != null ? Model.NhanVien.TenNV : "HLV Đã Chọn")</option>
                                            //@Html.DropDownList("MaNV", (SelectList)ViewBag.MaNV)
                                        }
                                        else
                                        {
                                            <option value="">-- Vui lòng chọn bộ môn trước --</option>
                                        }
                                    </select>
                                    @Html.ValidationMessageFor(m => m.MaNV, "", new { @class = "text-danger" })
                                </div>


                                @* Ngày trong tuần *@
                                <div class="col-md-12">
                                    <label class="form-label fw-bold d-block">Chọn ngày học trong tuần: <span class="text-danger">*</span></label>
                                    <div class="btn-group" role="group" id="DayCheckboxGroup">
                                        <input type="checkbox" class="btn-check" name="SelectedDays" value="1" id="Mon" autocomplete="off">
                                        <label class="btn btn-outline-primary" for="Mon">Thứ 2</label>
                                        <input type="checkbox" class="btn-check" name="SelectedDays" value="2" id="Tue" autocomplete="off">
                                        <label class="btn btn-outline-primary" for="Tue">Thứ 3</label>
                                        <input type="checkbox" class="btn-check" name="SelectedDays" value="3" id="Wed" autocomplete="off">
                                        <label class="btn btn-outline-primary" for="Wed">Thứ 4</label>
                                        <input type="checkbox" class="btn-check" name="SelectedDays" value="4" id="Thu" autocomplete="off">
                                        <label class="btn btn-outline-primary" for="Thu">Thứ 5</label>
                                        <input type="checkbox" class="btn-check" name="SelectedDays" value="5" id="Fri" autocomplete="off">
                                        <label class="btn btn-outline-primary" for="Fri">Thứ 6</label>
                                        <input type="checkbox" class="btn-check" name="SelectedDays" value="6" id="Sat" autocomplete="off">
                                        <label class="btn btn-outline-primary" for="Sat">Thứ 7</label>
                                        <input type="checkbox" class="btn-check" name="SelectedDays" value="0" id="Sun" autocomplete="off">
                                        <label class="btn btn-outline-primary" for="Sun">CN</label>
                                    </div>
                                    <div class="text-danger small mt-1">
                                        @Html.ValidationMessage("SelectedDays")
                                    </div>
                                    <div class="form-text small mt-1">Chọn ít nhất một ngày. Hệ thống sẽ tự động tính Ngày Kết Thúc tối thiểu.</div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="mt-4 text-end">
                <a href="@Url.Action("Index")" class="btn btn-light border me-2">Hủy</a>
                <button type="submit" class="btn btn-primary px-4 fw-bold">Tạo lớp</button>
            </div>
        }
    </div>
</div>

@section scripts {
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            // Định nghĩa các biến DOM
            const ddlMaCM = document.getElementById('ddlMaCM');
            const ddlMaNV = document.getElementById('ddlMaNV');
            const txtSoBuoi = document.getElementById('txtSoBuoi');
            const txtNgayBD = document.getElementById('txtNgayBD');
            const txtNgayKT = document.getElementById('txtNgayKT');
            const KetThucGoiY = document.getElementById('KetThucGoiY');

            const ddlGioBD = document.getElementById('ddlGioBD');
            const ddlPhutBD = document.getElementById('ddlPhutBD');
            const ddlGioKT = document.getElementById('ddlGioKT');
            const ddlPhutKT = document.getElementById('ddlPhutKT');
            const checkboxes = document.querySelectorAll('input[name="SelectedDays"]');
            const currencyInputs = document.querySelectorAll('.currency-input');

            // --- 1. HÀM TÍNH NGÀY KẾT THÚC TỐI THIỂU (CLIENT-SIDE GỢI Ý) ---
            function calculateMinEndDate() {
                const soBuoi = parseInt(txtSoBuoi.value);
                const ngayBDStr = txtNgayBD.value;

                if (!soBuoi || soBuoi <= 0 || !ngayBDStr) {
                    KetThucGoiY.textContent = "Vui lòng nhập Số buổi và Ngày bắt đầu.";
                    return;
                }

                let selectedDays = [];
                checkboxes.forEach(cb => { if (cb.checked) selectedDays.push(parseInt(cb.value)); });

                if (selectedDays.length === 0) {
                    KetThucGoiY.textContent = "Vui lòng chọn ngày học trong tuần.";
                    return;
                }

                let ngayHienTai = new Date(ngayBDStr);
                let buoiDaXep = 0;

                // Hàm chuyển đổi DayOfWeek (JS 0=CN, 1=T2) sang DayOfWeek (C# 0=CN, 1=T2) -> Đã khớp
                function getDayOfWeek(date) {
                    let day = date.getDay();
                    return day;
                }

                // Vòng lặp tìm ngày cuối cùng
                while (buoiDaXep < soBuoi) {
                    let dayOfWeek = getDayOfWeek(ngayHienTai);

                    if (selectedDays.includes(dayOfWeek)) {
                        buoiDaXep++;
                        if (buoiDaXep === soBuoi) break; // Thoát ngay khi tìm thấy buổi cuối cùng
                    }
                    ngayHienTai.setDate(ngayHienTai.getDate() + 1);
                }

                const ngayKetThucMin = new Date(ngayHienTai);

                // Format ngày kết thúc thành YYYY-MM-DD
                const yyyy = ngayKetThucMin.getFullYear();
                const mm = String(ngayKetThucMin.getMonth() + 1).padStart(2, '0');
                const dd = String(ngayKetThucMin.getDate()).padStart(2, '0');
                const ngayKetThucStr = `${dd}/${mm}/${yyyy}`;

                KetThucGoiY.innerHTML = `**Ngày kết thúc tối thiểu:** ${ngayKetThucStr}`;
            }

            // --- 2. HÀM TẢI HLV (Dựa trên Chuyên môn, Ngày, Giờ) ---
            function loadAvailableTrainers() {
                // Tự động tính ngày kết thúc tối thiểu trước
                calculateMinEndDate();

                const maCM = ddlMaCM.value;
                const ngayBD = txtNgayBD.value;
                const ngayKT = txtNgayKT.value; // Dùng giá trị người dùng nhập (hoặc giá trị cũ)

                const gioBD_str = ddlGioBD.value + ":" + ddlPhutBD.value;
                const gioKT_str = ddlGioKT.value + ":" + ddlPhutKT.value;

                let selectedDays = [];
                checkboxes.forEach(cb => { if (cb.checked) selectedDays.push(cb.value); });
                const currentMaNV = ddlMaNV.value;
                ddlMaNV.innerHTML = '';

                // Nếu thiếu thông tin cần thiết cho việc kiểm tra lịch
                if (!maCM || !ngayBD || !ngayKT || selectedDays.length === 0 || !gioBD_str || !gioKT_str) {
                    if (maCM) {
                         ddlMaNV.innerHTML = '<option value="">-- Nhập đầy đủ ngày/giờ/thứ để check lịch --</option>';
                         // Nếu chỉ có mã CM, có thể gọi load basic trainers nếu cần
                    } else {
                         ddlMaNV.innerHTML = '<option value="">-- Vui lòng chọn bộ môn trước --</option>';
                    }
                    return;
                }

                // Gọi API kiểm tra HLV rảnh
                let defaultOpt = document.createElement('option');
                defaultOpt.text = "-- Đang kiểm tra lịch trống... --";
                ddlMaNV.appendChild(defaultOpt);
                ddlMaNV.disabled = true;

                let query = `maCM=${maCM}&ngayBatDau=${ngayBD}&ngayKetThuc=${ngayKT}&gioBatDau=${gioBD_str}&gioKetThuc=${gioKT_str}`;
                selectedDays.forEach(d => query += `&selectedDays=${d}`);

                fetch('/AdminClass/GetAvailableTrainers?' + query)
                    .then(res => res.json())
                    .then(data => {
                        ddlMaNV.innerHTML = '';
                        ddlMaNV.disabled = false;

                        let prompt = document.createElement('option');
                        prompt.value = "";
                        prompt.text = data.length > 0 ? `-- Tìm thấy ${data.length} HLV rảnh --` : "-- Tất cả HLV đều bận giờ này --";
                        ddlMaNV.appendChild(prompt);

                        data.forEach(item => {
                            let opt = document.createElement('option');
                            opt.value = item.MaNV;
                            opt.text = item.TenNV;
                            ddlMaNV.appendChild(opt);
                        });
                    })
                    .catch(err => {
                        console.error(err);
                        ddlMaNV.innerHTML = '<option>-- Lỗi tải dữ liệu --</option>';
                        ddlMaNV.disabled = false;
                    });
            }


            // --- 3. HÀM KIỂM TRA GIỜ (30 phút tối thiểu và KT > BD) ---
            function checkTimeDifferenceAndLoad() {
                const gioBD = parseInt(ddlGioBD.value);
                const phutBD = parseInt(ddlPhutBD.value);
                const gioKT = parseInt(ddlGioKT.value);
                const phutKT = parseInt(ddlPhutKT.value);

                var startMinutes = gioBD * 60 + phutBD;
                var endMinutes = gioKT * 60 + phutKT;

                if (endMinutes <= startMinutes) {
                    // Nếu thời gian không hợp lệ, không gọi load HLV
                    return;
                }

                if (endMinutes - startMinutes < 30) {
                    // Nếu thời lượng quá ngắn, không gọi load HLV
                    return;
                }

                // Nếu giờ hợp lệ, tiến hành load HLV
                loadAvailableTrainers();
            }


            // --- 4. GÁN SỰ KIỆN ---

            // Các sự kiện thay đổi phải gọi hàm checkTimeDifferenceAndLoad hoặc loadAvailableTrainers
            if (ddlMaCM) {
                ddlMaCM.addEventListener('change', loadAvailableTrainers);
                txtSoBuoi.addEventListener('change', loadAvailableTrainers);
                txtNgayBD.addEventListener('change', loadAvailableTrainers);
                txtNgayKT.addEventListener('change', loadAvailableTrainers);

                checkboxes.forEach(cb => cb.addEventListener('change', loadAvailableTrainers));

                ddlGioBD.addEventListener('change', checkTimeDifferenceAndLoad);
                ddlPhutBD.addEventListener('change', checkTimeDifferenceAndLoad);
                ddlGioKT.addEventListener('change', checkTimeDifferenceAndLoad);
                ddlPhutKT.addEventListener('change', checkTimeDifferenceAndLoad);
            }

            // Gán sự kiện format tiền tệ
            currencyInputs.forEach(input => {
                input.addEventListener('input', function () {
                    var value = this.value.replace(/\D/g, "");
                    if (value !== "") value = new Intl.NumberFormat('vi-VN').format(value);
                    this.value = value;
                    loadAvailableTrainers(); // Gọi load lại khi thay đổi Học phí (không cần thiết nhưng an toàn)
                });

                // Load trạng thái ban đầu (nếu người dùng quay lại do lỗi validation)
                var value = input.value.replace(/\D/g, "");
                if (value !== "") input.value = new Intl.NumberFormat('vi-VN').format(value);
            });

            // Load HLV ban đầu nếu có dữ liệu cũ
            loadAvailableTrainers();

            // Kiểm tra và set trạng thái checkbox nếu có lỗi validation
            @if (Model.MaLop != 0 && ViewData["SelectedDays"] is int[] selectedDays)
            {
                <text>
                var selectedDaysArray = @Html.Raw(Json.Encode(selectedDays));
                selectedDaysArray.forEach(day => {
                    document.querySelector('input[name="SelectedDays"][value="' + day + '"]').checked = true;
                });
                </text>
            }

        });
    </script>
}