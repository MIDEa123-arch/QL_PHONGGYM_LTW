@model List<QL_PHONGGYM.Models.LopHoc>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="card border-0 shadow-sm">
    <div class="card-header bg-white py-3">
        <div class="d-flex justify-content-between align-items-center mb-3">
            <h5 class="mb-0 fw-bold text-primary"><i class="fas fa-chalkboard-teacher me-2"></i> Danh sách lớp học</h5>
            <a href="@Url.Action("Create")" class="btn btn-primary btn-sm">
                <i class="fas fa-plus me-1"></i> Tạo lớp mới
            </a>
        </div>
        @using (Html.BeginForm("Index", "AdminClass", FormMethod.Get, new { @class = "row g-3" }))
        {
            <div class="col-md-5">
                <div class="input-group">
                    <span class="input-group-text bg-light"><i class="fas fa-search"></i></span>
                    <input type="text" name="search" value="@ViewBag.CurrentSearch" class="form-control" placeholder="Nhập tên lớp học..." />
                </div>
            </div>

            <div class="col-md-3">
                @Html.DropDownList("MaCM", (SelectList)ViewBag.ListChuyenMon, "-- Tất cả bộ môn --", new { @class = "form-select", onchange = "this.form.submit()" })
            </div>

            <div class="col-md-4">
                <button type="submit" class="btn btn-primary"><i class="fas fa-filter me-1"></i> Lọc</button>
                <a href="@Url.Action("Index")" class="btn btn-outline-secondary ms-1" title="Xóa bộ lọc">
                    <i class="fas fa-sync-alt"></i>
                </a>
            </div>
        }
    </div>
    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table table-hover align-middle mb-0">
                <thead class="table-light">
                    <tr>
                        <th class="ps-4">Tên lớp</th>
                        <th>Bộ môn</th>
                        <th>HLV phụ trách</th>
                        <th>Thời gian</th>
                        <th>Học phí</th>
                        <th>Sĩ số</th>
                        <th class="text-center pe-4">Hành động</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Any())
                    {
                        foreach (var item in Model)
                        {
                            <tr>
                                <td class="ps-4 fw-bold text-primary">@item.TenLop</td>
                                <td><span class="badge bg-info text-dark">@item.ChuyenMon.TenChuyenMon</span></td>
                                <td>@(item.NhanVien != null ? item.NhanVien.TenNV : "Chưa gán")</td>
                                <td>
                                    <div class="small">@item.NgayBatDau.ToString("dd/MM") - @item.NgayKetThuc.ToString("dd/MM/yyyy")</div>
                                    <div class="small text-muted">(@item.SoBuoi buổi)</div>
                                </td>
                                <td class="fw-bold text-danger">@string.Format("{0:N0}đ", item.HocPhi)</td>
                                <td>
                                    <span class="badge bg-light text-dark border">
                                        @(item.SiSoHienTai ?? 0) / @item.SiSoToiDa
                                    </span>
                                </td>
                                <td class="text-end pe-4">
                                    <a href="@Url.Action("Calendar", "AdminClass", new {id=item.MaLop})" class="btn btn-info btn-sm text-white ms-2">
                                        <i class="fas fa-calendar-alt me-1"></i> Xem Thời Khóa Biểu
                                    </a>
                                    <a href="@Url.Action("Edit", new { id = item.MaLop })" class="btn btn-outline-primary btn-sm me-1">
                                        <i class="fas fa-edit"></i>
                                    </a>
                                    <button onclick="deleteClass(@item.MaLop)" class="btn btn-outline-danger btn-sm">
                                        <i class="fas fa-trash-alt"></i>
                                    </button>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr><td colspan="7" class="text-center py-4">Chưa có lớp học nào</td></tr>
                    }
                </tbody>
            </table>
        </div>

        @if (ViewBag.TotalPages > 1)
        {
            <div class="p-3">
                <nav aria-label="Page navigation">
                    <ul class="pagination justify-content-center mb-0">
                        @if (ViewBag.CurrentPage > 1)
                        {
                            <li class="page-item">
                                <a class="page-link" href="@Url.Action("Index", new { page = ViewBag.CurrentPage - 1, search = ViewBag.CurrentSearch, MaCM = ViewBag.CurrentMaCM })">Trước</a>
                            </li>
                        }

                        @for (int i = 1; i <= ViewBag.TotalPages; i++)
                        {
                            <li class="page-item @(i == ViewBag.CurrentPage ? "active" : "")">
                                <a class="page-link" href="@Url.Action("Index", new { page = i, search = ViewBag.CurrentSearch, MaCM = ViewBag.CurrentMaCM })">@i</a>
                            </li>
                        }

                        @if (ViewBag.CurrentPage < ViewBag.TotalPages)
                        {
                            <li class="page-item">
                                <a class="page-link" href="@Url.Action("Index", new { page = ViewBag.CurrentPage + 1, search = ViewBag.CurrentSearch, MaCM = ViewBag.CurrentMaCM })">Sau</a>
                            </li>
                        }
                    </ul>
                </nav>
            </div>
        }
    </div>
</div>

<div class="modal fade" id="scheduleModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-lg modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header bg-info text-white">
                <h5 class="modal-title fw-bold">
                    <i class="fas fa-calendar-week me-2"></i> Lịch học chi tiết: <span id="modalClassName">...</span>
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body p-0" id="modalScheduleContent">
                <div class="text-center py-5">
                    <div class="spinner-border text-primary" role="status">
                        <span class="visually-hidden">Loading...</span>
                    </div>
                    <p class="mt-2">Đang tải dữ liệu...</p>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Đóng</button>
            </div>
        </div>
    </div>
</div>

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script>
    function deleteClass(id) {
        if (confirm('Bạn có chắc muốn xóa lớp học này?')) {
            $.ajax({
                url: '@Url.Action("Delete", "AdminClass")',
                type: 'POST',
                data: { id: id },
                success: function (res) {
                    if (res.success) {
                        location.reload();
                    } else {
                        alert(res.message);
                    }
                }
            });
        }
    }

    function viewSchedule(id) {
        var myModalEl = document.getElementById('scheduleModal');
        var myModal = bootstrap.Modal.getInstance(myModalEl);
        if (!myModal) {
            myModal = new bootstrap.Modal(myModalEl);
        }
        myModal.show();

        document.getElementById('modalScheduleContent').innerHTML = `
        <div class="text-center py-5">
            <div class="spinner-border text-primary" role="status"></div>
            <p class="mt-2">Đang tải dữ liệu...</p>
        </div>`;

        fetch('/AdminClass/GetSchedule/' + id)
            .then(response => response.text())
            .then(html => {
                document.getElementById('modalScheduleContent').innerHTML = html;
            })
            .catch(error => {
                document.getElementById('modalScheduleContent').innerHTML =
                    '<div class="alert alert-danger m-3">Không thể tải lịch học. Vui lòng thử lại!</div>';
            });
    }

    function cancelSession(maLich, maLop) {
        if (confirm('Bạn có chắc muốn HOÃN/HỦY buổi học này không?\nHành động này sẽ đổi trạng thái buổi học thành "Đã hủy".')) {
            $.ajax({
                url: '/AdminClass/CancelSession',
                type: 'POST',
                data: { id: maLich },
                success: function (res) {
                    if (res.success) {
                        alert(res.message);
                        viewSchedule(maLop);
                    } else {
                        alert(res.message);
                    }
                },
                error: function () {
                    alert("Lỗi kết nối server!");
                }
            });
        }
    }

    function deleteItem(id) {
        if (confirm('Bạn có chắc muốn xóa lớp học này?\n(Lưu ý: Chỉ xóa được nếu lớp chưa có học viên đăng ký).')) {
            $.ajax({
                url: '/AdminClass/Delete',
                type: 'POST',
                data: { id: id },
                success: function (res) {
                    if (res.success) {
                        alert(res.message);
                        location.reload();
                    } else {
                        alert("KHÔNG THỂ XÓA: " + res.message);
                    }
                },
                error: function () {
                    alert("Lỗi kết nối server!");
                }
            });
        }
    }

    document.addEventListener("DOMContentLoaded", function () {
        function loadData() {
            var keyword = document.getElementById('txtSearch').value;
            var maCM = document.getElementById('ddlMaCM').value;
            var container = document.getElementById('tableContent');

            if(container) {
                container.style.opacity = '0.5';
                var url = `/AdminClass/Filter?search=${encodeURIComponent(keyword)}&maCM=${maCM}`;
                fetch(url)
                    .then(response => {
                        if (!response.ok) throw new Error("Lỗi mạng");
                        return response.text();
                    })
                    .then(html => {
                        container.innerHTML = html;
                        container.style.opacity = '1';
                    })
                    .catch(error => {
                        console.error('Lỗi:', error);
                        alert('Không thể tải dữ liệu.');
                        container.style.opacity = '1';
                    });
            }
        }

        var ddlMaCM = document.getElementById('ddlMaCM');
        if(ddlMaCM) ddlMaCM.addEventListener('change', loadData);

        var btnSearch = document.getElementById('btnSearch');
        if(btnSearch) btnSearch.addEventListener('click', loadData);

        var txtSearch = document.getElementById('txtSearch');
        if(txtSearch) {
            txtSearch.addEventListener('keypress', function (e) {
                if (e.key === 'Enter') loadData();
            });
        }

        var btnReset = document.getElementById('btnReset');
        if(btnReset) {
            btnReset.addEventListener('click', function () {
                document.getElementById('txtSearch').value = '';
                document.getElementById('ddlMaCM').value = '0';
                loadData();
            });
        }
    });
</script>