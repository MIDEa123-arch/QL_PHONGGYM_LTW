@model QL_PHONGGYM.Models.KhachHang
@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<div class="card shadow mb-4">
    <div class="card-header py-3 d-flex justify-content-between align-items-center">
        <h6 class="m-0 font-weight-bold text-primary">Thêm mới hội viên</h6>
    </div>
    <div class="card-body">
        @using (Html.BeginForm("Create", "AdminMember", FormMethod.Post))
        {
            @Html.AntiForgeryToken()

            @Html.ValidationSummary(true, "", new { @class = "text-danger mb-3" })

            <div class="row">
                <div class="col-md-6">
                    <div class="form-group mb-3">
                        <label class="fw-bold">Họ và tên <span class="text-danger">*</span></label>
                        @Html.EditorFor(model => model.TenKH, new { htmlAttributes = new { @class = "form-control", required = "required" } })
                        @Html.ValidationMessageFor(model => model.TenKH, "", new { @class = "text-danger" })
                    </div>

                    <div class="form-group mb-3">
                        <label class="fw-bold">Tên đăng nhập<span class="text-danger">*</span></label>
                        @Html.EditorFor(model => model.TenDangNhap, new { htmlAttributes = new { @class = "form-control", required = "required" } })
                        @Html.ValidationMessageFor(model => model.TenDangNhap, "", new { @class = "text-danger" })
                    </div>

                    <div class="form-group mb-3">
                        <label class="fw-bold">Mật khẩu</label>

                        <div class="position-relative">

                            @Html.EditorFor(model => model.MatKhau, new
                            {
                                htmlAttributes = new
                                {
                                    @class = "form-control pe-5",
                                type = "password",
                                placeholder = "Mặc định: 123456",
                                id = "txtMatKhau"
                                }
                            })

                            <span id="btnTogglePassword" class="position-absolute top-50 end-0 translate-middle-y me-3" style="cursor: pointer; color: #6c757d;">
                                <i class="fas fa-eye" id="iconEye"></i>
                            </span>
                        </div>

                        @Html.ValidationMessageFor(model => model.MatKhau, "", new { @class = "text-danger" })
                    </div>

                    <div class="form-group mb-3">
                        <label class="fw-bold">Giới tính</label>
                        <select name="GioiTinh" class="form-control">
                            <option value="Nam">Nam</option>
                            <option value="Nữ">Nữ</option>
                        </select>
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="form-group mb-3">
                        <label class="fw-bold">Số điện thoại <span class="text-danger">*</span></label>
                        @Html.EditorFor(model => model.SDT, new { htmlAttributes = new { @class = "form-control", type = "number", required = "required" } })
                        @Html.ValidationMessageFor(model => model.SDT, "", new { @class = "text-danger" })
                    </div>

                    <div class="form-group mb-3">
                        <label class="fw-bold">Email</label>
                        @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control", type = "email" } })
                        @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                    </div>

                    <div class="form-group mb-3">
                        <label class="fw-bold">Ngày sinh</label>
                        @Html.EditorFor(model => model.NgaySinh, new { htmlAttributes = new { @class = "form-control", type = "date" } })
                        @Html.ValidationMessageFor(model => model.NgaySinh, "", new { @class = "text-danger" })
                    </div>

                    <div class="form-group mb-3">
                        <label class="fw-bold">Loại thành viên</label>
                        @Html.DropDownList("MaLoaiKH", null, new { @class = "form-control" })
                    </div>
                </div>
            </div>

            <div class="mt-4">
                <button type="submit" class="btn btn-success"><i class="fas fa-save me-1"></i> Lưu lại</button>
                <a href="@Url.Action("Index")" class="btn btn-secondary ms-2">Quay lại</a>
            </div>
        }
    </div>
</div>
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script>
    // Không dùng $(document).ready nữa để tránh xung đột nếu load chậm
    document.getElementById('btnTogglePassword').addEventListener('click', function () {
        var input = document.getElementById('txtMatKhau');
        var icon = document.getElementById('iconEye');

        if (input) { // Kiểm tra xem có tìm thấy ô mật khẩu không
            if (input.type === 'password') {
                input.type = 'text';
                if (icon) { icon.className = 'fas fa-eye-slash'; }
            } else {
                input.type = 'password';
                if (icon) { icon.className = 'fas fa-eye'; }
            }
        } else {
            alert("Lỗi: Không tìm thấy ô nhập mật khẩu có id='txtMatKhau'");
        }
    });
</script>