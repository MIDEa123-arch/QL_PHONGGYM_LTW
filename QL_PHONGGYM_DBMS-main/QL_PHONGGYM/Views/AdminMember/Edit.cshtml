@model QL_PHONGGYM.Models.KhachHang
@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<div class="card border-0 shadow-sm" style="max-width: 800px; margin: 0 auto;">
    <div class="card-header bg-white py-3">
        <h5 class="mb-0 fw-bold text-primary">Hồ sơ: @Model.TenKH</h5>
    </div>
    <div class="card-body">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            @Html.HiddenFor(m => m.MaKH)
            @Html.HiddenFor(m => m.TenDangNhap) if (ViewBag.Error != null)
            {
                <div class="alert alert-danger">@ViewBag.Error</div>
            }
            if (TempData["ThongBao"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    <i class="fas fa-check-circle me-2"></i> @TempData["ThongBao"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }
            <div class="row g-3">

                <div class="col-md-6">
                    <label class="form-label fw-bold">Họ và tên</label>
                    @Html.TextBoxFor(m => m.TenKH, new { @class = "form-control", required = "required" })
                </div>
                <div class="col-md-6">
                    <label class="form-label fw-bold">Số điện thoại</label>
                    @Html.TextBoxFor(m => m.SDT, new { @class = "form-control", required = "required" })
                    @Html.ValidationMessageFor(m => m.SDT, "", new { @class = "text-danger small" })
                </div>

                <div class="col-md-6">
                    <label class="form-label fw-bold">Email</label>
                    @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger small" })
                </div>

                <div class="col-md-6">
                    <label class="form-label fw-bold">Ngày sinh</label>
                    <input type="date" name="NgaySinh" class="form-control" value="@(Model.NgaySinh.HasValue ? Model.NgaySinh.Value.ToString("yyyy-MM-dd") : "")" />
                    @Html.ValidationMessageFor(m => m.NgaySinh, "", new { @class = "text-danger small" })
                </div>

                <div class="col-md-6">
                    <label class="form-label fw-bold">Giới tính</label>
                    <select name="GioiTinh" class="form-select">
                        <option value="Nam" @(Model.GioiTinh == "Nam" ? "selected" : "")>Nam</option>
                        <option value="Nữ" @(Model.GioiTinh == "Nữ" ? "selected" : "")>Nữ</option>
                    </select>
                </div>
                <div class="col-md-6">
                    <label class="form-label fw-bold">Loại thành viên</label>
                    @Html.DropDownList("MaLoaiKH", null, new { @class = "form-select" })
                </div>

                <div class="col-12 mt-4">
                    <div class="alert alert-warning border-0 small">
                        <i class="fas fa-key me-1"></i> <strong>Đổi mật khẩu:</strong> Chỉ nhập bên dưới nếu khách yêu cầu reset mật khẩu. Để trống nếu không đổi.
                    </div>
                    <label class="form-label fw-bold">Mật khẩu mới</label>
                    @Html.TextBoxFor(m => m.MatKhau, new { @class = "form-control", type = "password", placeholder = "Nhập mật khẩu mới (nếu cần)" })
                </div>
            </div>

            <div class="mt-4 text-end">
                <a href="@Url.Action("Index")" class="btn btn-outline-danger border me-2">Quay lại</a>
                <button type="submit" class="btn btn-primary px-4 fw-bold">Cập nhật hồ sơ</button>
            </div>
        }
    </div>
</div>
