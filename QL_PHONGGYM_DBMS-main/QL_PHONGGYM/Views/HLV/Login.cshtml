@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Cổng Huấn Luyện Viên - The GYM</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">

    <style>
        body {
            background-color: #f4f6f9; 
            height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            font-family: 'Segoe UI', sans-serif;
        }

        .login-card {
            width: 100%;
            max-width: 420px;
            background: white;
            border-radius: 10px;
            box-shadow: 0 5px 20px rgba(0, 0, 0, 0.1);
            overflow: hidden;
            border-top: 5px solid #0d6efd; 
        }

        .login-header {
            background-color: white;
            padding: 30px 30px 10px;
            text-align: center;
            color: #343a40;
        }

        .logo-img {
            height: 80px; 
            margin-bottom: 5px;
        }

        .login-body {
            padding: 20px 30px 30px;
        }

        .btn-login {
            background-color: #0d6efd;
            border: none;
            width: 100%;
            padding: 12px;
            font-weight: bold;
            font-size: 1.1rem;
            transition: 0.3s;
            box-shadow: 0 2px 5px rgba(13, 110, 253, 0.3);
        }

            .btn-login:hover {
                background-color: #0b5ed7;
            }

        .input-group-text {
            width: 45px;
            justify-content: center;
        }
    </style>
</head>
<body>

    <div class="login-card">
        <div class="login-header">
            <img src="~/Content/Images/logo.png" alt="Logo" class="logo-img" />
            <h4 class="fw-bold text-uppercase m-0 text-primary">HLV PORTAL</h4>
            <small class="text-muted">Đăng nhập bằng tài khoản HLV của bạn</small>
        </div>

        <div class="login-body">
            @if (ViewBag.Error != null)
            {
                <div class="alert alert-danger text-center p-2 mb-3 small">
                    <i class="fas fa-exclamation-triangle me-1"></i> @ViewBag.Error
                </div>
            }

            <form action="@Url.Action("Login", "HLV")" method="post">
                @Html.AntiForgeryToken()

                <div class="mb-3">
                    <label class="form-label fw-bold small text-secondary">TÀI KHOẢN HLV</label>
                    <div class="input-group">
                        <span class="input-group-text bg-light"><i class="fas fa-user"></i></span>
                        <input type="text" name="username" class="form-control" placeholder="Mã nhân viên hoặc tài khoản..." required autofocus>
                    </div>
                </div>

                <div class="mb-4">
                    <label class="form-label fw-bold small text-secondary">MẬT KHẨU</label>
                    <div class="input-group">
                        <span class="input-group-text bg-light"><i class="fas fa-lock"></i></span>
                        <input type="password" name="password" id="passwordInput" class="form-control" placeholder="Mật khẩu..." required>

                        <button class="btn btn-outline-secondary" type="button" id="togglePassword">
                            <i class="fas fa-eye-slash" id="toggleIcon"></i>
                        </button>
                    </div>
                </div>

                <button type="submit" class="btn btn-primary btn-login">
                    <i class="fas fa-sign-in-alt me-2"></i> ĐĂNG NHẬP
                </button>
            </form>

            <div class="text-center mt-4">
                <a href="/" class="text-decoration-none text-muted small">← Quay về trang chủ</a>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

    <script>
        document.getElementById('togglePassword').addEventListener('click', function (e) {
            const passwordInput = document.getElementById('passwordInput');
            const toggleIcon = document.getElementById('toggleIcon');
            const type = passwordInput.getAttribute('type') === 'password' ? 'text' : 'password';
            passwordInput.setAttribute('type', type);
            if (type === 'text') {
                toggleIcon.classList.remove('fa-eye-slash');
                toggleIcon.classList.add('fa-eye');
            } else {
                toggleIcon.classList.remove('fa-eye');
                toggleIcon.classList.add('fa-eye-slash');
            }
        });
    </script>
</body>
</html>