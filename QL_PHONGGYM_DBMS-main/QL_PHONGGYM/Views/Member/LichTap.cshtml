@{
    ViewBag.Title = "Lịch tập luyện";
    Layout = "~/Views/Shared/_LayoutMember.cshtml";

    dynamic listLichTap = ViewBag.LichTap;

    DateTime currentDate = ViewBag.CurrentDate;

    int currentDayOfWeek = (int)currentDate.DayOfWeek;
    int daysToMonday = currentDayOfWeek == 0 ? 6 : currentDayOfWeek - 1;
    DateTime startOfWeek = currentDate.AddDays(-daysToMonday);
    DateTime endOfWeek = startOfWeek.AddDays(6);

    List<DateTime> weekDays = new List<DateTime>();
    for (int i = 0; i < 7; i++)
    {
        weekDays.Add(startOfWeek.AddDays(i));
    }
}

<style>
    .table-schedule th {
        background-color: #f8f9fa;
        font-weight: 600;
        text-transform: uppercase;
        font-size: 0.9rem;
        height: 50px;
    }

    .table-schedule td {
        height: 120px;
        vertical-align: top;
        padding: 5px;
    }

    .col-time {
        width: 100px;
        background-color: #f8f9fa !important;
        vertical-align: middle !important;
        font-weight: bold;
        color: #495057;
    }

    .today-highlight {
        background-color: #e7f1ff !important;
        color: #0d6efd;
    }

    /* Event Card Styles */
    .event-item {
        padding: 6px 8px;
        border-radius: 6px;
        font-size: 0.8rem;
        margin-bottom: 6px;
        border-left: 3px solid transparent;
        transition: 0.2s;
        text-align: left;
    }

    .event-normal {
        background-color: #e3f2fd;
        color: #0d47a1;
        border-left-color: #2196f3;
    }

    .event-pt {
        background-color: #e8f5e9;
        color: #1b5e20;
        border-left-color: #4caf50;
    }

    .event-finished {
        background-color: #f1f3f5;
        color: #6c757d;
        border-left-color: #adb5bd;
    }

    .event-time {
        font-size: 0.75rem;
        opacity: 0.85;
        margin-bottom: 2px;
    }
</style>

<div class="card shadow-sm border-0 rounded-3 h-100">
    <div class="card-body p-4">

        <div class="d-flex flex-wrap justify-content-between align-items-center mb-4">
            <div>
                <h4 class="fw-bold text-dark mb-1">Lịch Tập Luyện</h4>
                <p class="text-muted small mb-0">Tuần từ @startOfWeek.ToString("dd/MM") đến @endOfWeek.ToString("dd/MM/yyyy")</p>
            </div>

            <div class="d-flex align-items-center gap-2">
                <a href="@Url.Action("LichTap", "Member", new { date = currentDate.AddDays(-7).ToString("yyyy-MM-dd") })"
                   class="btn btn-outline-secondary btn-sm">
                    &lt;
                </a>

                <input type="date" class="form-control form-control-sm text-center fw-bold"
                       value="@currentDate.ToString("yyyy-MM-dd")"
                       style="width: 130px;"
                       onchange="location.href='@Url.Action("LichTap", "Member")?date=' + this.value" />

                <a href="@Url.Action("LichTap", "Member", new { date = currentDate.AddDays(7).ToString("yyyy-MM-dd") })"
                   class="btn btn-outline-secondary btn-sm">
                    &gt;
                </a>
            </div>
        </div>

        <div class="table-responsive">
            <table class="table table-bordered text-center table-schedule mb-0">
                <thead>
                    <tr>
                        <th class="col-time"></th>
                        @foreach (var day in weekDays)
                        {
                            bool isToday = day.Date == currentDate.Date;
                            <th class="@(isToday ? "today-highlight" : "")">
                                <div>@(day.DayOfWeek == DayOfWeek.Sunday ? "CN" : "Thứ " + ((int)day.DayOfWeek + 1))</div>
                                <small class="fw-normal text-muted">@day.ToString("dd/MM")</small>
                            </th>
                        }
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td class="col-time">SÁNG</td>
                        @foreach (var day in weekDays)
                        {
                            <td class="@(day.Date == currentDate.Date ? "bg-light" : "")">
                                @RenderScheduleCell(day, new TimeSpan(0, 0, 0), new TimeSpan(12, 0, 0), listLichTap)
                            </td>
                        }
                    </tr>
                    <tr>
                        <td class="col-time">CHIỀU</td>
                        @foreach (var day in weekDays)
                        {
                            <td class="@(day.Date == currentDate.Date ? "bg-light" : "")">
                                @RenderScheduleCell(day, new TimeSpan(12, 0, 0), new TimeSpan(18, 0, 0), listLichTap)
                            </td>
                        }
                    </tr>
                    <tr>
                        <td class="col-time">TỐI</td>
                        @foreach (var day in weekDays)
                        {
                            <td class="@(day.Date == currentDate.Date ? "bg-light" : "")">
                                @RenderScheduleCell(day, new TimeSpan(18, 0, 0), new TimeSpan(23, 59, 59), listLichTap)
                            </td>
                        }
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</div>

@helper RenderScheduleCell(DateTime cellDate, TimeSpan start, TimeSpan end, dynamic listLich)
{
    var events = new List<dynamic>();
    if (listLich != null)
    {
        foreach (var item in listLich)
        {
            if (item?.Ngay != null && item?.GioBD != null && item?.GioKT != null)
            {
                if (item.Ngay.Date == cellDate.Date && item.GioBD >= start && item.GioBD < end)
                {
                    events.Add(item);
                }
            }
        }
    }

    if (events.Count > 0)
    {
        events = events.OrderBy(e => e.GioBD).ToList();
        foreach (var ev in events)
        {
            string itemClass = "event-normal";
            if (ev.Loai == "Tập PT") { itemClass = "event-pt"; }
            if (ev.TrangThai.Contains("Đã")) { itemClass = "event-finished"; }

            <div class="event-item @itemClass">
                <div class="event-time">
                    @(ev?.GioBD?.ToString(@"hh\:mm") ?? "00:00") - @(ev?.GioKT?.ToString(@"hh\:mm") ?? "00:00")
                </div>
                <div class="fw-bold text-truncate">@ev.Ten</div>

                @if (!string.IsNullOrEmpty(ev?.TrangThai) && ev.TrangThai.Contains("Đã"))
                {
                    <div class="small fst-italic mt-1">✓ Đã tập</div>
                }
            </div>
        }
    }
}